<body>
  <!-- SVG Filters for Liquid Glass Effects -->
  <svg style="position: absolute; width: 0; height: 0; overflow: hidden;">
    <defs>
      <!-- Liquid Glass Distortion Filter -->
      <filter id="liquid-glass-filter" x="-50%" y="-50%" width="200%" height="200%">
        <feTurbulence type="fractalNoise" baseFrequency="0.01" numOctaves="3" result="noise" seed="1"/>
        <feDisplacementMap in="SourceGraphic" in2="noise" scale="3" xChannelSelector="R" yChannelSelector="G"/>
      </filter>
      
      <!-- Glow Filter -->
      <filter id="glow-filter" x="-50%" y="-50%" width="200%" height="200%">
        <feGaussianBlur stdDeviation="10" result="blur"/>
        <feComposite in="SourceGraphic" in2="blur" operator="over"/>
      </filter>
      
      <!-- Glass Refraction Filter -->
      <filter id="glass-refraction" x="0%" y="0%" width="100%" height="100%">
        <feTurbulence type="turbulence" baseFrequency="0.02" numOctaves="2" result="turbulence"/>
        <feDisplacementMap in="SourceGraphic" in2="turbulence" scale="2" xChannelSelector="R" yChannelSelector="B"/>
        <feGaussianBlur stdDeviation="0.5"/>
      </filter>
      
      <!-- Chromatic Aberration -->
      <filter id="chromatic-aberration">
        <feOffset in="SourceGraphic" dx="1" dy="0" result="red">
          <animate attributeName="dx" values="1;2;1" dur="3s" repeatCount="indefinite"/>
        </feOffset>
        <feOffset in="SourceGraphic" dx="-1" dy="0" result="blue">
          <animate attributeName="dx" values="-1;-2;-1" dur="3s" repeatCount="indefinite"/>
        </feOffset>
        <feBlend in="red" in2="blue" mode="screen"/>
      </filter>
      
      <!-- Gradient Definitions -->
      <linearGradient id="glass-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" style="stop-color:rgba(0,212,255,0.3);stop-opacity:1">
          <animate attributeName="stop-color" values="rgba(0,212,255,0.3);rgba(139,92,246,0.3);rgba(0,212,255,0.3)" dur="5s" repeatCount="indefinite"/>
        </stop>
        <stop offset="100%" style="stop-color:rgba(139,92,246,0.3);stop-opacity:1">
          <animate attributeName="stop-color" values="rgba(139,92,246,0.3);rgba(0,212,255,0.3);rgba(139,92,246,0.3)" dur="5s" repeatCount="indefinite"/>
        </stop>
      </linearGradient>
    </defs>
  </svg>

