---
import Layout from '@layouts/Layout.astro';
import Icon from '@components/ui/Icon.astro';

const features = [
  {
    icon: 'zap',
    title: '高性能',
    description: '极速响应，毫秒级延迟'
  },
  {
    icon: 'shield',
    title: '安全可靠',
    description: '企业级安全保障，数据加密传输'
  },
  {
    icon: 'cpu',
    title: '智能理解',
    description: '深度理解上下文，精准响应需求'
  },
  {
    icon: 'globe',
    title: '全球部署',
    description: '遍布全球的节点，就近访问'
  },
];

const team = [
  { name: 'Alex Chen', role: '创始人 & CEO' },
  { name: 'Sarah Kim', role: '技术总监' },
  { name: 'Mike Wang', role: '产品负责人' },
];
---

<Layout 
  title="关于 - Meow Note"
  description="构建AI的未来"
>
  <section class="about">
    <div class="about-container">
      <div class="about-hero">
        <h1 class="about-title">关于</h1>
        <p class="about-subtitle">构建AI的未来</p>
      </div>
      
      <div class="about-content">
        <div class="about-section">
          <h2 class="section-title">
            我们的使命
          </h2>
          <p class="section-text">
            我们致力于构建安全、可靠、易用的AI工具，让每个人都能享受到人工智能带来的便利。
          </p>
        </div>
        
        <div class="features-grid">
          {features.map((feature) => (
            <div class="feature-card hover-lift">
              <div class="feature-icon">
                <Icon name={feature.icon} size={22} />
              </div>
              <h3 class="feature-title">{feature.title}</h3>
              <p class="feature-description">{feature.description}</p>
            </div>
          ))}
        </div>
        
        <div class="team-section">
          <h2 class="section-title">
            核心团队
          </h2>
          <div class="team-grid">
            {team.map((member) => (
              <div class="team-card hover-lift">
                <div class="team-avatar">
                  {member.name.split(' ').map(n => n[0]).join('')}
                </div>
                <h3 class="team-name">{member.name}</h3>
                <p class="team-role">{member.role}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .about {
    min-height: 100vh;
    padding: calc(var(--header-total-height) + var(--space-4)) var(--space-4) var(--space-12);
  }
  
  .about-container {
    max-width: var(--container-lg);
    margin: 0 auto;
  }
  
  .about-hero {
    text-align: center;
    margin-bottom: var(--space-12);
  }
  
  .about-title {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-4);
  }
  
  @media (min-width: 768px) {
    .about-title {
      font-size: var(--text-5xl);
    }
  }
  
  .about-subtitle {
    color: var(--text-secondary);
    font-size: var(--text-lg);
  }
  
  .about-content {
    display: flex;
    flex-direction: column;
    gap: var(--space-12);
  }
  
  .about-section {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }
  
  .section-title {
    font-size: var(--text-2xl);
    font-weight: var(--font-semibold);
    color: var(--text-primary);
    margin-bottom: var(--space-4);
  }
  
  @media (min-width: 768px) {
    .section-title {
      font-size: var(--text-3xl);
    }
  }
  
  .section-text {
    color: var(--text-secondary);
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
  }
  
  .features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: var(--space-4);
  }
  
  @media (min-width: 768px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .features-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }
  
  .feature-card {
    text-align: center;
    padding: var(--space-6);
    background: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: var(--radius-2xl);
    box-shadow: var(--card-shadow);
    transition: transform var(--duration-normal) var(--ease-default),
                box-shadow var(--duration-normal) var(--ease-default),
                border-color var(--duration-normal) var(--ease-default);
  }
  
  .feature-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--card-hover-shadow);
    border-color: var(--border-hover);
  }
  
  .feature-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    margin: 0 auto var(--space-4);
    background: linear-gradient(135deg, var(--color-accent-blue), var(--color-accent-purple));
    border-radius: var(--radius-lg);
    color: white;
  }
  
  .feature-title {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    color: var(--text-primary);
    margin-bottom: var(--space-2);
  }
  
  .feature-description {
    font-size: var(--text-sm);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
  }
  
  .team-section {
    text-align: center;
  }
  
  .team-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: var(--space-6);
    margin-top: var(--space-8);
  }
  
  @media (min-width: 768px) {
    .team-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }
  
  .team-card {
    padding: var(--space-6);
    background: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: var(--radius-2xl);
    box-shadow: var(--card-shadow);
    transition: transform var(--duration-normal) var(--ease-default),
                box-shadow var(--duration-normal) var(--ease-default),
                border-color var(--duration-normal) var(--ease-default);
  }
  
  .team-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--card-hover-shadow);
    border-color: var(--border-hover);
  }
  
  .team-avatar {
    width: 64px;
    height: 64px;
    margin: 0 auto var(--space-4);
    background: linear-gradient(135deg, var(--color-accent-blue), var(--color-accent-purple));
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: var(--text-lg);
    font-weight: var(--font-bold);
    color: white;
  }
  
  .team-name {
    font-size: var(--text-base);
    font-weight: var(--font-semibold);
    color: var(--text-primary);
    margin-bottom: var(--space-1);
  }
  
  .team-role {
    font-size: var(--text-sm);
    color: var(--text-secondary);
  }
</style>
