<script>
  const API_BASE = 'https://api.agiera.net';
  
  // DOM Elements
  const chatApp = document.getElementById('chat-app');
  const sidebar = document.getElementById('sidebar');
  const menuBtn = document.getElementById('menu-btn');
  const sidebarToggle = document.getElementById('sidebar-toggle');
  const newChatBtn = document.getElementById('new-chat-btn');
  const modelBtn = document.getElementById('model-btn');
  const modelDropdown = document.getElementById('model-dropdown');
  const modelName = document.getElementById('model-name');
  const welcomeContainer = document.getElementById('welcome-container');
  const messagesContainer = document.getElementById('messages-container');
  const chatArea = document.getElementById('chat-area');
  const chatInput = document.getElementById('chat-input') as HTMLTextAreaElement;
  const sendBtn = document.getElementById('send-btn');
  const stopBtn = document.getElementById('stop-btn');
  const historyList = document.getElementById('history-list');
  
  // State
  let chatHistory: { role: string; content: string }[] = [];
  let isStreaming = false;
  let currentModel = 'doubao-2.0-pro';
  let conversations: { id: string; title: string; messages: typeof chatHistory }[] = [];
  let currentConversationId: string | null = null;
  let abortController: AbortController | null = null;
  
  // Initialize
  function init() {
    loadConversations();
    renderHistoryList();
    setupEventListeners();
  }
  
  // Event Listeners
  function setupEventListeners() {
    // Sidebar toggle
    menuBtn?.addEventListener('click', toggleSidebar);
    sidebarToggle?.addEventListener('click', toggleSidebar);
    
    // New chat
    newChatBtn?.addEventListener('click', startNewChat);
    
    // Model selector
    modelBtn?.addEventListener('click', toggleModelDropdown);
    document.querySelectorAll('.model-option').forEach(option => {
      option.addEventListener('click', () => selectModel(option as HTMLElement));
    });
    
    // Close dropdown when clicking outside
    document.addEventListener('click', (e) => {
      if (!modelBtn?.contains(e.target as Node) && !modelDropdown?.contains(e.target as Node)) {
        modelDropdown?.classList.remove('visible');
      }
    });
    
    // Input
    chatInput?.addEventListener('input', handleInput);
    chatInput?.addEventListener('keydown', handleKeyDown);
    
    // Send/Stop buttons
    sendBtn?.addEventListener('click', sendMessage);
    stopBtn?.addEventListener('click', stopGeneration);
    
    // Suggestion cards
    document.querySelectorAll('.suggestion-card').forEach(card => {
      card.addEventListener('click', () => {
        const prompt = card.getAttribute('data-prompt');
        if (prompt && chatInput) {
          chatInput.value = prompt;
          handleInput();
          sendMessage();
        }
      });
    });
  }
  
  // Sidebar functions
  function toggleSidebar() {
    sidebar?.classList.toggle('open');
    sidebar?.classList.toggle('collapsed');
    
    // Create/remove overlay for mobile
    let overlay = document.querySelector('.sidebar-overlay');
    if (sidebar?.classList.contains('open')) {
      if (!overlay) {
        overlay = document.createElement('div');
        overlay.className = 'sidebar-overlay';
        overlay.addEventListener('click', toggleSidebar);
        chatApp?.appendChild(overlay);
      }
      overlay.classList.add('visible');
    } else {
      overlay?.classList.remove('visible');
    }
  }
  
  // Model functions
  function toggleModelDropdown() {
    modelDropdown?.classList.toggle('visible');
  }
  
  function selectModel(option: HTMLElement) {
    const model = option.getAttribute('data-model');
    const name = option.getAttribute('data-name');
    
    if (model && name) {
      currentModel = model;
      if (modelName) modelName.textContent = name;
      
      // Update active state
      document.querySelectorAll('.model-option').forEach(opt => opt.classList.remove('active'));
      option.classList.add('active');
    }
    
    modelDropdown?.classList.remove('visible');
  }
  
  // Input functions
  function handleInput() {
    if (!chatInput || !sendBtn) return;
    
    // Auto-resize
    chatInput.style.height = 'auto';
    chatInput.style.height = Math.min(chatInput.scrollHeight, 200) + 'px';
    
    // Update button state
    (sendBtn as HTMLButtonElement).disabled = !chatInput.value.trim() || isStreaming;
  }
  
  function handleKeyDown(e: KeyboardEvent) {
    if (e.key === 'Enter' && !e.shiftKey) {
      e.preventDefault();
      sendMessage();
    }
  }
  
  // Chat functions
  function startNewChat() {
    // Save current conversation if it has messages
    if (chatHistory.length > 0 && currentConversationId) {
      saveConversation();
    }
    
    // Reset state
    chatHistory = [];
    currentConversationId = generateId();
    
    // Clear UI
    if (messagesContainer) messagesContainer.innerHTML = '';
    welcomeContainer?.classList.remove('hidden');
    if (chatInput) {
      chatInput.value = '';
      handleInput();
    }
    
    // Close sidebar on mobile
    sidebar?.classList.remove('open');
    document.querySelector('.sidebar-overlay')?.classList.remove('visible');
  }
  
  async function sendMessage() {
    if (!chatInput) return;
    
    const message = chatInput.value.trim();
    if (!message || isStreaming) return;
    
    // Hide welcome screen
    welcomeContainer?.classList.add('hidden');
    
    // Add user message with sending status
    const userMessageDiv = addMessage('user', message, 'sending');
    chatHistory.push({ role: 'user', content: message });
    
    // Clear input
    chatInput.value = '';
    handleInput();
    
    // Update UI state
    isStreaming = true;
    updateInputState();
    
    // Create abort controller for cancellation
    abortController = new AbortController();
    
    try {
      const response = await fetch(`${API_BASE}/api/doubao`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          prompt: message,
          model: currentModel,
          history: chatHistory.slice(-10)
        }),
        signal: abortController.signal
      });
      
      // Update user message status to sent
      updateMessageStatus(userMessageDiv, 'sent');
      
      // Show typing indicator
      addTypingIndicator();
      
      const result = await response.json();
      
      removeTypingIndicator();
      
      if (result.answer) {
        addMessage('assistant', result.answer);
        chatHistory.push({ role: 'assistant', content: result.answer });
        
        // Save conversation
        saveConversation();
      } else {
        addMessage('assistant', result.error || result.message || 'Sorry, something went wrong.');
      }
    } catch (error) {
      if ((error as Error).name === 'AbortError') {
        removeTypingIndicator();
        addMessage('assistant', 'Generation stopped.');
      } else {
        console.error('Chat error:', error);
        updateMessageStatus(userMessageDiv, 'error');
        removeTypingIndicator();
        addMessage('assistant', 'Network error. Please try again.');
      }
    } finally {
      isStreaming = false;
      abortController = null;
      updateInputState();
    }
  }
  
  function stopGeneration() {
    if (abortController) {
      abortController.abort();
    }
  }
  
  function updateInputState() {
    if (!sendBtn || !stopBtn) return;
    
    if (isStreaming) {
      sendBtn.style.display = 'none';
      stopBtn.style.display = 'flex';
    } else {
      sendBtn.style.display = 'flex';
      stopBtn.style.display = 'none';
      (sendBtn as HTMLButtonElement).disabled = !chatInput?.value.trim();
    }
  }
  
  // Message functions
  function addMessage(role: 'user' | 'assistant', content: string, status?: 'sending' | 'sent' | 'error') {
    const messageDiv = document.createElement('div');
    messageDiv.className = `message ${role}`;
    messageDiv.dataset.role = role;
    
    const time = new Date().toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
    const author = role === 'user' ? 'You' : 'AI Assistant';
    const avatarContent = role === 'user' ? 'U' : '<video autoplay loop muted playsinline width="36" height="36"><source src="/logo.mp4" type="video/mp4" /></video>';
    
    // Status indicator
    let statusHtml = '';
    if (status) {
      const statusText = status === 'sending' ? 'Sending...' : status === 'sent' ? 'Sent' : 'Failed';
      statusHtml = `<div class="message-status ${status}">${statusText}</div>`;
    }
    
    messageDiv.innerHTML = `
      <div class="message-avatar ${role}">
        ${avatarContent}
      </div>
      <div class="message-content">
        <div class="message-header">
          <span class="message-author">${author}</span>
          <span class="message-time">${time}</span>
        </div>
        <div class="message-bubble">
          <div class="message-text">${formatMessage(content)}</div>
        </div>
        ${statusHtml}
        <div class="message-actions">
          <button class="message-action" title="Copy" onclick="copyMessage(this)">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
              <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
            </svg>
          </button>
          <button class="message-action" title="Regenerate" onclick="regenerateMessage(this)" style="display: ${role === 'assistant' ? 'flex' : 'none'}">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="23 4 23 10 17 10"></polyline>
              <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"></path>
            </svg>
          </button>
        </div>
      </div>
    `;
    
    messagesContainer?.appendChild(messageDiv);
    scrollToBottom();
    
    return messageDiv;
  }
  
  // Update message status
  function updateMessageStatus(messageDiv: HTMLElement, status: 'sending' | 'sent' | 'error') {
    const statusDiv = messageDiv.querySelector('.message-status');
    if (statusDiv) {
      statusDiv.className = `message-status ${status}`;
      statusDiv.textContent = status === 'sending' ? 'Sending...' : status === 'sent' ? 'Sent' : 'Failed';
    }
  }
  
  function addTypingIndicator() {
    const messageDiv = document.createElement('div');
    messageDiv.className = 'message typing';
    messageDiv.id = 'typing-message';
    messageDiv.innerHTML = `
      <div class="message-avatar assistant">
        <video autoplay loop muted playsinline width="32" height="32">
          <source src="/logo.mp4" type="video/mp4" />
        </video>
      </div>
      <div class="message-content">
        <div class="message-header">
          <span class="message-author">AI Assistant</span>
        </div>
        <div class="typing-indicator">
          <span></span>
          <span></span>
          <span></span>
        </div>
      </div>
    `;
    messagesContainer?.appendChild(messageDiv);
    scrollToBottom();
  }
  
  function removeTypingIndicator() {
    const typingMessage = document.getElementById('typing-message');
    typingMessage?.remove();
  }
  
  function formatMessage(content: string): string {
    // Escape HTML first
    let formatted = escapeHtml(content);
    
    // Code blocks with language detection
    formatted = formatted.replace(/```(\w+)?\n([\s\S]*?)```/g, (match, lang, code) => {
      const language = lang || 'code';
      return `<pre data-language="${language}"><code>${code}</code></pre>`;
    });
    
    // Inline code
    formatted = formatted.replace(/`([^`]+)`/g, '<code>$1</code>');
    
    // Links
    formatted = formatted.replace(/\[([^\]]+)\]\(([^)]+)\)/g, '<a href="$2" target="_blank" rel="noopener">$1</a>');
    
    // Auto-link URLs
    formatted = formatted.replace(/(https?:\/\/[^\s<]+)/g, '<a href="$1" target="_blank" rel="noopener">$1</a>');
    
    // Bold
    formatted = formatted.replace(/\*\*([^*]+)\*\*/g, '<strong>$1</strong>');
    
    // Italic
    formatted = formatted.replace(/\*([^*]+)\*/g, '<em>$1</em>');
    
    // Strikethrough
    formatted = formatted.replace(/~~([^~]+)~~/g, '<del>$1</del>');
    
    // Blockquotes
    formatted = formatted.replace(/^&gt; (.+)$/gm, '<blockquote>$1</blockquote>');
    
    // Unordered lists
    formatted = formatted.replace(/^[-*] (.+)$/gm, '<li>$1</li>');
    formatted = formatted.replace(/(<li>.*<\/li>\n?)+/g, '<ul>$&</ul>');
    
    // Ordered lists
    formatted = formatted.replace(/^\d+\. (.+)$/gm, '<li>$1</li>');
    
    // Line breaks (after lists to avoid breaking them)
    formatted = formatted.replace(/\n/g, '<br>');
    
    // Clean up consecutive breaks
    formatted = formatted.replace(/(<br>){3,}/g, '<br><br>');
    
    return formatted;
  }
  
  function scrollToBottom() {
    if (chatArea) {
      requestAnimationFrame(() => {
        chatArea.scrollTop = chatArea.scrollHeight;
      });
    }
  }
  
  // Conversation management
  function generateId(): string {
    return Date.now().toString(36) + Math.random().toString(36).substr(2);
  }
  
  function saveConversation() {
    if (!currentConversationId || chatHistory.length === 0) return;
    
    const existingIndex = conversations.findIndex(c => c.id === currentConversationId);
    const title = chatHistory[0]?.content.slice(0, 30) + '...' || 'New Chat';
    
    const conversation = {
      id: currentConversationId,
      title,
      messages: [...chatHistory]
    };
    
    if (existingIndex >= 0) {
      conversations[existingIndex] = conversation;
    } else {
      conversations.unshift(conversation);
    }
    
    // Keep only last 20 conversations
    if (conversations.length > 20) {
      conversations = conversations.slice(0, 20);
    }
    
    localStorage.setItem('chat_conversations', JSON.stringify(conversations));
    renderHistoryList();
  }
  
  function loadConversations() {
    const saved = localStorage.getItem('chat_conversations');
    if (saved) {
      conversations = JSON.parse(saved);
    }
    currentConversationId = generateId();
  }
  
  function renderHistoryList() {
    if (!historyList) return;
    
    historyList.innerHTML = conversations.map(conv => `
      <div class="history-item ${conv.id === currentConversationId ? 'active' : ''}" data-id="${conv.id}">
        <svg class="history-item-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
        </svg>
        <span class="history-item-text">${escapeHtml(conv.title)}</span>
        <div class="history-item-actions">
          <button class="history-item-action" onclick="deleteConversation('${conv.id}', event)">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="3 6 5 6 21 6"></polyline>
              <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
            </svg>
          </button>
        </div>
      </div>
    `).join('');
    
    // Add click handlers
    historyList.querySelectorAll('.history-item').forEach(item => {
      item.addEventListener('click', () => loadConversation(item.getAttribute('data-id')!));
    });
  }
  
  function loadConversation(id: string) {
    const conversation = conversations.find(c => c.id === id);
    if (!conversation) return;
    
    currentConversationId = id;
    chatHistory = [...conversation.messages];
    
    // Render messages
    if (messagesContainer) {
      messagesContainer.innerHTML = '';
      conversation.messages.forEach(msg => {
        addMessage(msg.role as 'user' | 'assistant', msg.content);
      });
    }
    
    welcomeContainer?.classList.add('hidden');
    renderHistoryList();
    
    // Close sidebar on mobile
    sidebar?.classList.remove('open');
    document.querySelector('.sidebar-overlay')?.classList.remove('visible');
  }
  
  // Utility functions
  function escapeHtml(text: string): string {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }
  
  // Expose functions to window for onclick handlers
  (window as any).copyMessage = function(btn: HTMLElement) {
    const messageText = btn.closest('.message')?.querySelector('.message-text')?.textContent;
    if (messageText) {
      navigator.clipboard.writeText(messageText);
      // Visual feedback
      const originalBg = btn.style.background;
      btn.style.background = 'var(--color-accent-green)';
      btn.style.color = 'white';
      setTimeout(() => {
        btn.style.background = originalBg;
        btn.style.color = '';
      }, 1200);
    }
  };
  
  // Regenerate assistant message
  (window as any).regenerateMessage = function(btn: HTMLElement) {
    const messageDiv = btn.closest('.message') as HTMLElement;
    if (!messageDiv || isStreaming) return;
    
    // Find the user message that triggered this response
    const allMessages = Array.from(messagesContainer?.querySelectorAll('.message') || []);
    const currentIndex = allMessages.indexOf(messageDiv);
    
    if (currentIndex > 0) {
      const userMessageDiv = allMessages[currentIndex - 1];
      const userText = userMessageDiv.querySelector('.message-text')?.textContent;
      
      if (userText && chatInput) {
        // Remove the current assistant message
        messageDiv.remove();
        
        // Remove from chat history
        chatHistory = chatHistory.slice(0, -1);
        
        // Resend the message
        chatInput.value = userText;
        handleInput();
        sendMessage();
      }
    }
  };
  
  (window as any).deleteConversation = function(id: string, event: Event) {
    event.stopPropagation();
    conversations = conversations.filter(c => c.id !== id);
    localStorage.setItem('chat_conversations', JSON.stringify(conversations));
    renderHistoryList();
    
    if (id === currentConversationId) {
      startNewChat();
    }
  };
  
  // Initialize
  init();
</script>
