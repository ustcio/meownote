---
import Layout from '@layouts/Layout.astro';
import { getLangFromUrl } from '@i18n';

const lang = getLangFromUrl(Astro.url);
---

<Layout 
  title={lang === 'zh' ? 'AI 助手 - Meow Note' : 'AI Assistant - Meow Note'}
  description={lang === 'zh' ? '智能AI对话助手，支持多模型、多语言' : 'Intelligent AI chat assistant with multi-model support'}
>
  <div class="chat-app" data-lang={lang}>
    <!-- Sidebar -->
    <aside class="sidebar" id="sidebar">
      <div class="sidebar-header">
        <a href="/" class="sidebar-logo">
          <video class="logo-video" autoplay loop muted playsinline preload="auto" width="28" height="28">
            <source src="/logo.mp4" type="video/mp4" />
          </video>
          <span class="logo-text">Meow Note</span>
        </a>
      </div>
      
      <button class="new-chat-btn" id="new-chat-btn">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="12" y1="5" x2="12" y2="19"></line>
          <line x1="5" y1="12" x2="19" y2="12"></line>
        </svg>
        <span>{lang === 'zh' ? '新对话' : 'New Chat'}</span>
      </button>
      
      <div class="sidebar-search">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <circle cx="11" cy="11" r="8"></circle>
          <line x1="21" y1="21" x2="16.65" y2="16.65"></line>
        </svg>
        <input type="text" class="search-input" id="search-input" placeholder={lang === 'zh' ? '搜索对话...' : 'Search chats...'} />
      </div>
      
      <div class="sidebar-content" id="sidebar-content">
        <div class="sidebar-section" data-section="today">
          <button class="section-header" data-toggle="today">
            <svg class="section-chevron" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
            <span>{lang === 'zh' ? '今天' : 'Today'}</span>
            <span class="section-count" id="count-today">0</span>
          </button>
          <div class="history-list" id="history-today"></div>
        </div>
        
        <div class="sidebar-section" data-section="week">
          <button class="section-header" data-toggle="week">
            <svg class="section-chevron" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
            <span>{lang === 'zh' ? '过去7天' : 'Last 7 days'}</span>
            <span class="section-count" id="count-week">0</span>
          </button>
          <div class="history-list" id="history-week"></div>
        </div>
        
        <div class="sidebar-section" data-section="older">
          <button class="section-header" data-toggle="older">
            <svg class="section-chevron" width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
            <span>{lang === 'zh' ? '更早' : 'Earlier'}</span>
            <span class="section-count" id="count-older">0</span>
          </button>
          <div class="history-list" id="history-older"></div>
        </div>
      </div>
      
      <div class="sidebar-footer">
        <button class="sidebar-action" id="clear-all-btn">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="3 6 5 6 21 6"></polyline>
            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
          </svg>
          <span>{lang === 'zh' ? '清空对话' : 'Clear chats'}</span>
        </button>
      </div>
    </aside>

    <div class="sidebar-overlay" id="sidebar-overlay"></div>

    <!-- Main Content -->
    <main class="main-content">
      <!-- Header -->
      <header class="chat-header">
        <button class="menu-toggle" id="menu-toggle">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="3" y1="12" x2="21" y2="12"></line>
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <line x1="3" y1="18" x2="21" y2="18"></line>
          </svg>
        </button>
        
        <div class="model-selector" id="model-selector">
          <button class="model-btn" id="model-btn">
            <div class="model-icon">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <path d="M12 16v-4"></path>
                <path d="M12 8h.01"></path>
              </svg>
            </div>
            <span class="model-name" id="model-name">Doubao Pro</span>
            <svg class="chevron" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
          </button>
          <div class="model-dropdown" id="model-dropdown">
            <div class="model-group">
              <div class="model-group-label">Doubao</div>
              <button class="model-option active" data-model="doubao-2.0-pro" data-name="Doubao Pro">
                <div class="model-option-content">
                  <span class="model-option-name">Doubao 2.0 Pro</span>
                  <span class="model-option-desc">{lang === 'zh' ? '最强推理能力' : 'Best reasoning'}</span>
                </div>
                <svg class="check-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
              </button>
              <button class="model-option" data-model="doubao-2.0-code" data-name="Doubao Code">
                <div class="model-option-content">
                  <span class="model-option-name">Doubao 2.0 Code</span>
                  <span class="model-option-desc">{lang === 'zh' ? '代码专家' : 'Code expert'}</span>
                </div>
                <svg class="check-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
              </button>
            </div>
            <div class="model-group">
              <div class="model-group-label">Qwen</div>
              <button class="model-option" data-model="qwen-turbo" data-name="Qwen Turbo">
                <div class="model-option-content">
                  <span class="model-option-name">Qwen Turbo</span>
                  <span class="model-option-desc">{lang === 'zh' ? '快速响应' : 'Fast response'}</span>
                </div>
                <svg class="check-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
              </button>
              <button class="model-option" data-model="qwen-plus" data-name="Qwen Plus">
                <div class="model-option-content">
                  <span class="model-option-name">Qwen Plus</span>
                  <span class="model-option-desc">{lang === 'zh' ? '均衡性能' : 'Balanced'}</span>
                </div>
                <svg class="check-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polyline points="20 6 9 17 4 12"></polyline>
                </svg>
              </button>
            </div>
          </div>
        </div>
        
        <div class="header-actions">
          <button class="header-action" id="export-btn" title={lang === 'zh' ? '导出对话' : 'Export chat'}>
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
              <polyline points="7 10 12 15 17 10"></polyline>
              <line x1="12" y1="15" x2="12" y2="3"></line>
            </svg>
          </button>
          <button class="header-action" id="share-btn" title={lang === 'zh' ? '分享' : 'Share'}>
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="18" cy="5" r="3"></circle>
              <circle cx="6" cy="12" r="3"></circle>
              <circle cx="18" cy="19" r="3"></circle>
              <line x1="8.59" y1="13.51" x2="15.42" y2="17.49"></line>
              <line x1="15.41" y1="6.51" x2="8.59" y2="10.49"></line>
            </svg>
          </button>
          <button class="header-action" id="settings-btn" title={lang === 'zh' ? '设置' : 'Settings'}>
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="3"></circle>
              <path d="M19.4 15a1.65 1.65 0 0 0 .33 1.82l.06.06a2 2 0 0 1 0 2.83 2 2 0 0 1-2.83 0l-.06-.06a1.65 1.65 0 0 0-1.82-.33 1.65 1.65 0 0 0-1 1.51V21a2 2 0 0 1-2 2 2 2 0 0 1-2-2v-.09A1.65 1.65 0 0 0 9 19.4a1.65 1.65 0 0 0-1.82.33l-.06.06a2 2 0 0 1-2.83 0 2 2 0 0 1 0-2.83l.06-.06a1.65 1.65 0 0 0 .33-1.82 1.65 1.65 0 0 0-1.51-1H3a2 2 0 0 1-2-2 2 2 0 0 1 2-2h.09A1.65 1.65 0 0 0 4.6 9a1.65 1.65 0 0 0-.33-1.82l-.06-.06a2 2 0 0 1 0-2.83 2 2 0 0 1 2.83 0l.06.06a1.65 1.65 0 0 0 1.82.33H9a1.65 1.65 0 0 0 1-1.51V3a2 2 0 0 1 2-2 2 2 0 0 1 2 2v.09a1.65 1.65 0 0 0 1 1.51 1.65 1.65 0 0 0 1.82-.33l.06-.06a2 2 0 0 1 2.83 0 2 2 0 0 1 0 2.83l-.06.06a1.65 1.65 0 0 0-.33 1.82V9a1.65 1.65 0 0 0 1.51 1H21a2 2 0 0 1 2 2 2 2 0 0 1-2 2h-.09a1.65 1.65 0 0 0-1.51 1z"></path>
            </svg>
          </button>
        </div>
      </header>

      <!-- Chat Area -->
      <div class="chat-area" id="chat-area">
        <!-- Welcome Screen -->
        <div class="welcome-screen" id="welcome-screen">
          <div class="welcome-content">
            <div class="welcome-brand">
              <video class="welcome-logo" autoplay loop muted playsinline preload="auto">
                <source src="/logo.mp4" type="video/mp4" />
              </video>
              <h1 class="welcome-title">{lang === 'zh' ? '你好，我是 Meow' : 'Hello, I\'m Meow'}</h1>
              <p class="welcome-subtitle">{lang === 'zh' ? '你的智能AI助手，随时为你提供帮助' : 'Your intelligent AI assistant, ready to help'}</p>
            </div>
            
            <div class="quick-actions">
              <div class="quick-actions-title">
                <span>{lang === 'zh' ? '快速开始' : 'Quick Start'}</span>
              </div>
              <div class="quick-actions-grid">
                <button class="quick-action-card" data-prompt={lang === 'zh' ? '帮我写一段Python代码，实现一个简单的Web服务器' : 'Write Python code for a simple web server'}>
                  <div class="quick-action-icon code">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <polyline points="16 18 22 12 16 6"></polyline>
                      <polyline points="8 6 2 12 8 18"></polyline>
                    </svg>
                  </div>
                  <div class="quick-action-content">
                    <span class="quick-action-title">{lang === 'zh' ? '编写代码' : 'Write Code'}</span>
                    <span class="quick-action-desc">{lang === 'zh' ? 'Python、JavaScript、Go...' : 'Python, JavaScript, Go...'}</span>
                  </div>
                </button>
                
                <button class="quick-action-card" data-prompt={lang === 'zh' ? '请帮我翻译以下内容成英文：' : 'Help me translate the following to Chinese:'}>
                  <div class="quick-action-icon translate">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M5 8l6 6"></path>
                      <path d="M4 14l6-6 2-3"></path>
                      <path d="M2 5h12"></path>
                      <path d="M7 2h1"></path>
                      <path d="M22 22l-5-10-5 10"></path>
                      <path d="M14 18h6"></path>
                    </svg>
                  </div>
                  <div class="quick-action-content">
                    <span class="quick-action-title">{lang === 'zh' ? '翻译文本' : 'Translate'}</span>
                    <span class="quick-action-desc">{lang === 'zh' ? '中英互译、多语言支持' : 'Chinese-English, multi-language'}</span>
                  </div>
                </button>
                
                <button class="quick-action-card" data-prompt={lang === 'zh' ? '请帮我总结以下文章的要点：' : 'Summarize the key points of the following:'}>
                  <div class="quick-action-icon summarize">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                      <polyline points="14 2 14 8 20 8"></polyline>
                      <line x1="16" y1="13" x2="8" y2="13"></line>
                      <line x1="16" y1="17" x2="8" y2="17"></line>
                    </svg>
                  </div>
                  <div class="quick-action-content">
                    <span class="quick-action-title">{lang === 'zh' ? '总结内容' : 'Summarize'}</span>
                    <span class="quick-action-desc">{lang === 'zh' ? '快速提取关键信息' : 'Extract key information'}</span>
                  </div>
                </button>
                
                <button class="quick-action-card" data-prompt={lang === 'zh' ? '请用简单的语言解释什么是' : 'Explain in simple terms what is'}>
                  <div class="quick-action-icon explain">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <circle cx="12" cy="12" r="10"></circle>
                      <path d="M9.09 9a3 3 0 0 1 5.83 1c0 2-3 3-3 3"></path>
                      <line x1="12" y1="17" x2="12.01" y2="17"></line>
                    </svg>
                  </div>
                  <div class="quick-action-content">
                    <span class="quick-action-title">{lang === 'zh' ? '解释概念' : 'Explain'}</span>
                    <span class="quick-action-desc">{lang === 'zh' ? '深入浅出地理解复杂概念' : 'Understand complex concepts'}</span>
                  </div>
                </button>
              </div>
            </div>
            
            <div class="capabilities">
              <div class="capabilities-title">{lang === 'zh' ? '我能做什么' : 'What I can do'}</div>
              <div class="capabilities-list">
                <div class="capability-item">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                  <span>{lang === 'zh' ? '回答问题和提供建议' : 'Answer questions & provide advice'}</span>
                </div>
                <div class="capability-item">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                  <span>{lang === 'zh' ? '编写和调试代码' : 'Write & debug code'}</span>
                </div>
                <div class="capability-item">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                  <span>{lang === 'zh' ? '翻译和润色文本' : 'Translate & polish text'}</span>
                </div>
                <div class="capability-item">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                  <span>{lang === 'zh' ? '分析和总结内容' : 'Analyze & summarize content'}</span>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Messages Container -->
        <div class="messages-container" id="messages-container"></div>
      </div>

      <!-- Input Area -->
      <div class="input-area" id="input-area">
        <div class="input-wrapper">
          <!-- Quick Commands -->
          <div class="quick-commands" id="quick-commands">
            <button class="quick-command" data-command={lang === 'zh' ? '继续' : 'continue'} title={lang === 'zh' ? '让AI继续生成内容' : 'Continue generation'}>
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polygon points="5 3 19 12 5 21 5 3"></polygon>
              </svg>
              <span>{lang === 'zh' ? '继续' : 'Continue'}</span>
            </button>
            <button class="quick-command" data-command={lang === 'zh' ? '详细解释' : 'explain more'} title={lang === 'zh' ? '获取更详细的解释' : 'Get detailed explanation'}>
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <line x1="12" y1="16" x2="12" y2="12"></line>
                <line x1="12" y1="8" x2="12.01" y2="8"></line>
              </svg>
              <span>{lang === 'zh' ? '详细解释' : 'Explain'}</span>
            </button>
            <button class="quick-command" data-command={lang === 'zh' ? '更简洁' : 'be concise'} title={lang === 'zh' ? '获取简洁版本' : 'Get concise version'}>
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="4" y1="21" x2="4" y2="14"></line>
                <line x1="4" y1="10" x2="4" y2="3"></line>
                <line x1="12" y1="21" x2="12" y2="12"></line>
                <line x1="12" y1="8" x2="12" y2="3"></line>
                <line x1="20" y1="21" x2="20" y2="16"></line>
                <line x1="20" y1="12" x2="20" y2="3"></line>
              </svg>
              <span>{lang === 'zh' ? '更简洁' : 'Concise'}</span>
            </button>
            <button class="quick-command" data-command={lang === 'zh' ? '举例说明' : 'give examples'} title={lang === 'zh' ? '请求举例说明' : 'Request examples'}>
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="8" y1="6" x2="21" y2="6"></line>
                <line x1="8" y1="12" x2="21" y2="12"></line>
                <line x1="8" y1="18" x2="21" y2="18"></line>
                <line x1="3" y1="6" x2="3.01" y2="6"></line>
                <line x1="3" y1="12" x2="3.01" y2="12"></line>
                <line x1="3" y1="18" x2="3.01" y2="18"></line>
              </svg>
              <span>{lang === 'zh' ? '举例' : 'Examples'}</span>
            </button>
            <button class="quick-command" data-command={lang === 'zh' ? '翻译成英文' : 'translate to Chinese'} title={lang === 'zh' ? '翻译成英文' : 'Translate to Chinese'}>
              <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M5 8l6 6"></path>
                <path d="M4 14l6-6 2-3"></path>
                <path d="M2 5h12"></path>
                <path d="M7 2h1"></path>
                <path d="M22 22l-5-10-5 10"></path>
                <path d="M14 18h6"></path>
              </svg>
              <span>{lang === 'zh' ? '翻译' : 'Translate'}</span>
            </button>
          </div>
          
          <div class="input-box" id="input-box">
            <div class="input-content">
              <div class="input-scroll-container">
                <textarea 
                  id="chat-input"
                  class="chat-input"
                  placeholder={lang === 'zh' ? '输入消息，按 Enter 发送...' : 'Message...'}
                  rows="1"
                  spellcheck="false"
                  autocomplete="off"
                  autocorrect="off"
                  autocapitalize="off"
                ></textarea>
              </div>
            </div>
            <div class="input-actions">
              <div class="input-actions-left">
                <button class="input-action-btn" id="attach-btn" title={lang === 'zh' ? '附件' : 'Attach'}>
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M21.44 11.05l-9.19 9.19a6 6 0 0 1-8.49-8.49l9.19-9.19a4 4 0 0 1 5.66 5.66l-9.2 9.19a2 2 0 0 1-2.83-2.83l8.49-8.48"></path>
                  </svg>
                </button>
                <input type="file" id="file-input" accept="image/*,.pdf,.txt,.md,.json,.csv" multiple hidden />
              </div>
              <div class="input-actions-right">
                <span class="char-count" id="char-count">0</span>
                <button class="send-btn" id="send-btn" disabled>
                  <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M2.01 21L23 12 2.01 3 2 10l15 2-15 2z"></path>
                  </svg>
                </button>
                <button class="stop-btn" id="stop-btn">
                  <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                    <rect x="6" y="6" width="12" height="12" rx="2"></rect>
                  </svg>
                </button>
              </div>
            </div>
          </div>
          
          <p class="input-hint">
            <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="12" cy="12" r="10"></circle>
              <line x1="12" y1="16" x2="12" y2="12"></line>
              <line x1="12" y1="8" x2="12.01" y2="8"></line>
            </svg>
            {lang === 'zh' ? 'AI 可能会产生错误信息，请核实重要内容' : 'AI may make mistakes. Verify important information'}
          </p>
        </div>
      </div>
      
      <!-- Toast Notification -->
      <div class="toast-container" id="toast-container"></div>
      
      <!-- Settings Modal -->
      <div class="modal-overlay" id="settings-modal">
        <div class="modal">
          <div class="modal-header">
            <h3>{lang === 'zh' ? '设置' : 'Settings'}</h3>
            <button class="modal-close" id="close-settings">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="18" y1="6" x2="6" y2="18"></line>
                <line x1="6" y1="6" x2="18" y2="18"></line>
              </svg>
            </button>
          </div>
          <div class="modal-body">
            <div class="settings-group">
              <label class="settings-label">{lang === 'zh' ? '默认模型' : 'Default Model'}</label>
              <select class="settings-select" id="default-model-select">
                <option value="doubao-2.0-pro">Doubao 2.0 Pro</option>
                <option value="doubao-2.0-code">Doubao 2.0 Code</option>
