<script>
  const chatApp = document.querySelector('.chat-app');
  const lang = chatApp?.getAttribute('data-lang') || 'zh';

  const API_BASE = 'https://api.agiera.net';
  
  const sidebar = document.getElementById('sidebar');
  const menuToggle = document.getElementById('menu-toggle');
  const sidebarOverlay = document.getElementById('sidebar-overlay');
  const newChatBtn = document.getElementById('new-chat-btn');
  const searchInput = document.getElementById('search-input') as HTMLInputElement;
  const modelBtn = document.getElementById('model-btn');
  const modelDropdown = document.getElementById('model-dropdown');
  const modelName = document.getElementById('model-name');
  const welcomeScreen = document.getElementById('welcome-screen');
  const messagesContainer = document.getElementById('messages-container');
  const chatArea = document.getElementById('chat-area');
  const chatInput = document.getElementById('chat-input') as HTMLTextAreaElement;
  const sendBtn = document.getElementById('send-btn');
  const stopBtn = document.getElementById('stop-btn');
  const quickCommands = document.getElementById('quick-commands');
  const historyToday = document.getElementById('history-today');
  const historyWeek = document.getElementById('history-week');
  const historyOlder = document.getElementById('history-older');
  const clearAllBtn = document.getElementById('clear-all-btn');
  
  let chatHistory: { role: string; content: string }[] = [];
  let isStreaming = false;
  let currentModel = 'doubao-2.0-pro';
  let conversations: { id: string; title: string; messages: typeof chatHistory; date: number }[] = [];
  let currentConversationId: string | null = null;
  let abortController: AbortController | null = null;

  function init() {
    loadConversations();
    renderHistory();
    setupEventListeners();
  }

  function setupEventListeners() {
    menuToggle?.addEventListener('click', toggleSidebar);
    sidebarOverlay?.addEventListener('click', toggleSidebar);
    newChatBtn?.addEventListener('click', startNewChat);
    clearAllBtn?.addEventListener('click', clearAllConversations);
    
    modelBtn?.addEventListener('click', () => {
      modelDropdown?.classList.toggle('open');
      modelBtn?.setAttribute('aria-expanded', String(modelDropdown?.classList.contains('open')));
    });
    
    document.addEventListener('click', (e) => {
      if (!modelBtn?.contains(e.target as Node) && !modelDropdown?.contains(e.target as Node)) {
        modelDropdown?.classList.remove('open');
        modelBtn?.setAttribute('aria-expanded', 'false');
      }
    });
    
    document.querySelectorAll('.model-option').forEach(option => {
      option.addEventListener('click', () => selectModel(option as HTMLElement));
    });
    
    chatInput?.addEventListener('input', handleInput);
    chatInput?.addEventListener('keydown', handleKeyDown);
    
    sendBtn?.addEventListener('click', sendMessage);
    stopBtn?.addEventListener('click', stopGeneration);
    
    document.querySelectorAll('.quick-action-card').forEach(card => {
      card.addEventListener('click', () => {
        const prompt = card.getAttribute('data-prompt');
        if (prompt && chatInput) {
          chatInput.value = prompt;
          handleInput();
          sendMessage();
        }
      });
    });
    
    quickCommands?.querySelectorAll('.quick-command').forEach(btn => {
      btn.addEventListener('click', () => {
        const command = btn.getAttribute('data-command');
        if (command && chatInput) {
          chatInput.value = command;
          handleInput();
          sendMessage();
        }
      });
    });
    
    searchInput?.addEventListener('input', () => {
      renderHistory(searchInput.value.toLowerCase());
    });
  }

  function toggleSidebar() {
    sidebar?.classList.toggle('open');
    sidebarOverlay?.classList.toggle('visible');
  }

  function selectModel(option: HTMLElement) {
    const model = option.getAttribute('data-model');
    const name = option.getAttribute('data-name');
    
    if (model && name && modelName) {
      currentModel = model;
      modelName.textContent = name;
      
      document.querySelectorAll('.model-option').forEach(opt => opt.classList.remove('active'));
      option.classList.add('active');
    }
    
    modelDropdown?.classList.remove('open');
    modelBtn?.setAttribute('aria-expanded', 'false');
  }

  function handleInput() {
    if (!chatInput || !sendBtn) return;
    
    chatInput.style.height = 'auto';
    chatInput.style.height = Math.min(chatInput.scrollHeight, 200) + 'px';
    
    (sendBtn as HTMLButtonElement).disabled = !chatInput.value.trim() || isStreaming;
  }

  function handleKeyDown(e: KeyboardEvent) {
    if (e.key === 'Enter' && !e.shiftKey) {
      e.preventDefault();
      sendMessage();
    }
  }

  function startNewChat() {
    if (chatHistory.length > 0 && currentConversationId) {
      saveConversation();
    }
    
    chatHistory = [];
    currentConversationId = generateId();
    
    if (messagesContainer) messagesContainer.innerHTML = '';
    welcomeScreen?.classList.remove('hidden');
    if (chatInput) {
      chatInput.value = '';
      handleInput();
    }
    
    sidebar?.classList.remove('open');
    sidebarOverlay?.classList.remove('visible');
    renderHistory();
  }

  async function sendMessage() {
    if (!chatInput) return;
    
    const message = chatInput.value.trim();
    if (!message || isStreaming) return;
    
    welcomeScreen?.classList.add('hidden');
    
    addMessage('user', message);
    chatHistory.push({ role: 'user', content: message });
    
    chatInput.value = '';
    handleInput();
    
    isStreaming = true;
    updateInputState();
    
    abortController = new AbortController();
    
    try {
      addTypingIndicator();
      
      const response = await fetch(`${API_BASE}/api/doubao`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          prompt: message,
          model: currentModel,
          history: chatHistory.slice(-10)
        }),
        signal: abortController.signal
      });
      
      const result = await response.json();
      
      removeTypingIndicator();
      
      if (result.answer) {
        addMessage('assistant', result.answer);
        chatHistory.push({ role: 'assistant', content: result.answer });
        saveConversation();
      } else {
        addMessage('assistant', result.error || result.message || (lang === 'zh' ? '抱歉，出现错误。' : 'Sorry, something went wrong.'));
      }
    } catch (error) {
      if ((error as Error).name === 'AbortError') {
        removeTypingIndicator();
        addMessage('assistant', lang === 'zh' ? '已停止生成。' : 'Generation stopped.');
      } else {
        console.error('Chat error:', error);
        removeTypingIndicator();
        addMessage('assistant', lang === 'zh' ? '网络错误，请重试。' : 'Network error. Please try again.');
      }
    } finally {
      isStreaming = false;
      abortController = null;
      updateInputState();
    }
  }

  function stopGeneration() {
    if (abortController) {
      abortController.abort();
    }
  }

  function updateInputState() {
    if (!sendBtn || !stopBtn) return;
    
    if (isStreaming) {
      sendBtn.style.display = 'none';
      stopBtn.style.display = 'flex';
    } else {
      sendBtn.style.display = 'flex';
      stopBtn.style.display = 'none';
      (sendBtn as HTMLButtonElement).disabled = !chatInput?.value.trim();
    }
  }

  function addMessage(role: 'user' | 'assistant', content: string) {
    if (!messagesContainer) return;
    
    const messageDiv = document.createElement('div');
    messageDiv.className = `message ${role}`;
    
    const avatarContent = role === 'user' ? (lang === 'zh' ? '你' : 'Y') : 'M';
    const author = role === 'user' ? (lang === 'zh' ? '你' : 'You') : 'Meow';
    
    messageDiv.innerHTML = `
      <div class="message-avatar ${role}">${avatarContent}</div>
      <div class="message-content">
        <div class="message-header">
          <span class="message-author">${author}</span>
        </div>
        <div class="message-text">${formatMessage(content)}</div>
        <div class="message-actions">
          <button class="message-action" title="${lang === 'zh' ? '复制' : 'Copy'}" data-action="copy">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
              <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
            </svg>
          </button>
          ${role === 'assistant' ? `
          <button class="message-action" title="${lang === 'zh' ? '重新生成' : 'Regenerate'}" data-action="regenerate">
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="23 4 23 10 17 10"></polyline>
              <path d="M20.49 15a9 9 0 1 1-2.12-9.36L23 10"></path>
            </svg>
          </button>
          ` : ''}
        </div>
      </div>
    `;
    
    messageDiv.querySelectorAll('.message-action').forEach(btn => {
      btn.addEventListener('click', () => handleMessageAction(btn as HTMLElement, role));
    });
    
    messagesContainer.appendChild(messageDiv);
    scrollToBottom();
  }

  function handleMessageAction(btn: HTMLElement, role: string) {
    const action = btn.getAttribute('data-action');
    const messageDiv = btn.closest('.message');
    
    if (action === 'copy') {
      const text = messageDiv?.querySelector('.message-text')?.textContent || '';
      navigator.clipboard.writeText(text);
      btn.classList.add('copied');
      setTimeout(() => btn.classList.remove('copied'), 1500);
    } else if (action === 'regenerate' && !isStreaming) {
      const allMessages = Array.from(messagesContainer?.querySelectorAll('.message') || []);
      const currentIndex = allMessages.indexOf(messageDiv as HTMLElement);
      
      if (currentIndex > 0) {
        const userMessageDiv = allMessages[currentIndex - 1];
        const userText = userMessageDiv.querySelector('.message-text')?.textContent;
        
        if (userText) {
          messageDiv?.remove();
          chatHistory = chatHistory.slice(0, -1);
          chatInput!.value = userText;
          handleInput();
          sendMessage();
        }
      }
    }
  }

  function addTypingIndicator() {
    if (!messagesContainer) return;
    
    const messageDiv = document.createElement('div');
    messageDiv.className = 'message assistant';
    messageDiv.id = 'typing-message';
    messageDiv.innerHTML = `
      <div class="message-avatar assistant">M</div>
      <div class="message-content">
        <div class="message-header">
          <span class="message-author">Meow</span>
        </div>
        <div class="typing-indicator">
          <span></span><span></span><span></span>
        </div>
      </div>
    `;
    
    messagesContainer.appendChild(messageDiv);
    scrollToBottom();
  }

  function removeTypingIndicator() {
    document.getElementById('typing-message')?.remove();
  }

  function formatMessage(content: string): string {
    let formatted = escapeHtml(content);
    
    formatted = formatted.replace(/```(\w+)?\n([\s\S]*?)```/g, (_match, _lang, code) => {
      return `<pre><code>${code}</code></pre>`;
    });
    
    formatted = formatted.replace(/`([^`]+)`/g, '<code>$1</code>');
    formatted = formatted.replace(/\[([^\]]+)\]\(([^)]+)\)/g, '<a href="$2" target="_blank" rel="noopener">$1</a>');
    formatted = formatted.replace(/(https?:\/\/[^\s<]+)/g, '<a href="$1" target="_blank" rel="noopener">$1</a>');
    formatted = formatted.replace(/\*\*([^*]+)\*\*/g, '<strong>$1</strong>');
    formatted = formatted.replace(/\*([^*]+)\*/g, '<em>$1</em>');
    formatted = formatted.replace(/~~([^~]+)~~/g, '<del>$1</del>');
    formatted = formatted.replace(/^> (.+)$/gm, '<blockquote>$1</blockquote>');
    formatted = formatted.replace(/^[-*] (.+)$/gm, '<li>$1</li>');
    formatted = formatted.replace(/(<li>.*<\/li>\n?)+/g, '<ul>$&</ul>');
    formatted = formatted.replace(/^\d+\. (.+)$/gm, '<li>$1</li>');
    formatted = formatted.replace(/\n/g, '<br>');
    formatted = formatted.replace(/(<br>){3,}/g, '<br><br>');
    
    return formatted;
  }

  function scrollToBottom() {
    if (chatArea) {
      requestAnimationFrame(() => {
        chatArea.scrollTop = chatArea.scrollHeight;
      });
    }
  }

  function generateId(): string {
    return Date.now().toString(36) + Math.random().toString(36).substr(2);
  }

  function saveConversation() {
    if (!currentConversationId || chatHistory.length === 0) return;
    
    const existingIndex = conversations.findIndex(c => c.id === currentConversationId);
    const title = chatHistory[0]?.content.slice(0, 40) || (lang === 'zh' ? '新对话' : 'New Chat');
    
    const conversation = {
      id: currentConversationId,
      title,
      messages: [...chatHistory],
      date: Date.now()
    };
    
    if (existingIndex >= 0) {
      conversations[existingIndex] = conversation;
    } else {
      conversations.unshift(conversation);
    }
    
    if (conversations.length > 50) {
      conversations = conversations.slice(0, 50);
    }
    
    localStorage.setItem('chat_conversations', JSON.stringify(conversations));
    renderHistory();
  }

  function loadConversations() {
    const saved = localStorage.getItem('chat_conversations');
    if (saved) {
      try {
        conversations = JSON.parse(saved);
      } catch {
        conversations = [];
      }
    }
    currentConversationId = generateId();
  }

  function renderHistory(searchQuery: string = '') {
    const now = Date.now();
    const todayStart = new Date().setHours(0, 0, 0, 0);
    const weekAgo = now - 7 * 24 * 60 * 60 * 1000;
    
    const filtered = searchQuery 
      ? conversations.filter(c => c.title.toLowerCase().includes(searchQuery))
      : conversations;
    
    const today = filtered.filter(c => c.date >= todayStart);
    const week = filtered.filter(c => c.date >= weekAgo && c.date < todayStart);
    const older = filtered.filter(c => c.date < weekAgo);
    
    renderHistorySection(historyToday, today);
    renderHistorySection(historyWeek, week);
    renderHistorySection(historyOlder, older);
  }

  function renderHistorySection(container: HTMLElement | null, items: typeof conversations) {
    if (!container) return;
    
    if (items.length === 0) {
      container.innerHTML = '';
      return;
    }
    
    container.innerHTML = items.map(conv => `
      <button class="history-item ${conv.id === currentConversationId ? 'active' : ''}" data-id="${conv.id}">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
        </svg>
        <span class="history-item-text">${escapeHtml(conv.title)}</span>
        <button class="history-item-delete" data-id="${conv.id}" title="${lang === 'zh' ? '删除' : 'Delete'}">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="3 6 5 6 21 6"></polyline>
            <path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path>
          </svg>
        </button>
      </button>
    `).join('');
    
    container.querySelectorAll('.history-item').forEach(item => {
      item.addEventListener('click', (e) => {
        if (!(e.target as HTMLElement).closest('.history-item-delete')) {
          loadConversation(item.getAttribute('data-id')!);
        }
      });
    });
    
    container.querySelectorAll('.history-item-delete').forEach(btn => {
      btn.addEventListener('click', (e) => {
        e.stopPropagation();
        deleteConversation(btn.getAttribute('data-id')!);
      });
    });
  }

  function loadConversation(id: string) {
    const conversation = conversations.find(c => c.id === id);
    if (!conversation) return;
    
    currentConversationId = id;
    chatHistory = [...conversation.messages];
    
    if (messagesContainer) {
      messagesContainer.innerHTML = '';
      conversation.messages.forEach(msg => {
        addMessage(msg.role as 'user' | 'assistant', msg.content);
      });
    }
    
    welcomeScreen?.classList.add('hidden');
    renderHistory();
    
    sidebar?.classList.remove('open');
    sidebarOverlay?.classList.remove('visible');
  }

  function deleteConversation(id: string) {
    conversations = conversations.filter(c => c.id !== id);
    localStorage.setItem('chat_conversations', JSON.stringify(conversations));
    renderHistory();
    
    if (id === currentConversationId) {
      startNewChat();
    }
  }

  function clearAllConversations() {
    if (confirm(lang === 'zh' ? '确定要清空所有对话吗？' : 'Clear all conversations?')) {
      conversations = [];
      localStorage.removeItem('chat_conversations');
      startNewChat();
    }
  }

  function escapeHtml(text: string): string {
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }

  init();
</script>
