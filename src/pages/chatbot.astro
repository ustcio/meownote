<style>
  .chatbot-hero {
    min-height: 50vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 6rem 2rem;
  }

  .chatbot-hero h1 {
    font-size: 3rem;
    margin-bottom: 1.5rem;
  }

  .chatbot-hero .gradient {
    background: linear-gradient(135deg, #fff 0%, #2997ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .chatbot-hero p {
    font-size: 1.25rem;
    color: var(--text-secondary);
    max-width: 600px;
  }

  .chatbot-container {
    padding: 0 2rem 6rem;
    display: flex;
    justify-content: center;
  }

  .chatbot-window {
    width: 100%;
    max-width: 800px;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 20px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }

  .chatbot-header {
    display: flex;
    align-items: center;
    gap: 2rem;
    padding: 1.5rem 2rem;
    background: rgba(255, 255, 255, 0.05);
    border-bottom: 1px solid rgba(255, 255, 255, 0.06);
  }

  .chatbot-header-dots {
    display: flex;
    gap: 0.5rem;
  }

  .chatbot-header-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
  }

  .chatbot-header-dot.red {
    background: #ff5f56;
  }

  .chatbot-header-dot.yellow {
    background: #ffbd2e;
  }

  .chatbot-header-dot.green {
    background: #27ca40;
  }

  .chatbot-header-title {
    font-weight: 600;
    color: var(--text-primary);
  }

  .ai-selector {
    margin-left: auto;
    position: relative;
  }

  .ai-selector-btn {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1.25rem;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    color: var(--text-primary);
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .ai-selector-btn:hover {
    background: rgba(255, 255, 255, 0.12);
    border-color: rgba(255, 255, 255, 0.15);
  }

  .ai-selector-dropdown {
    position: absolute;
    top: calc(100% + 0.5rem);
    right: 0;
    min-width: 300px;
    background: rgba(20, 20, 25, 0.95);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.3);
    backdrop-filter: blur(20px);
    z-index: 100;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.3s ease;
  }

  .ai-selector-dropdown.show {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }

  .ai-option {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem 1.25rem;
    cursor: pointer;
    transition: all 0.3s ease;
    border-bottom: 1px solid rgba(255, 255, 255, 0.05);
  }

  .ai-option:last-child {
    border-bottom: none;
  }

  .ai-option:hover {
    background: rgba(255, 255, 255, 0.05);
  }

  .ai-option.active {
    background: rgba(41, 151, 255, 0.1);
    border-left: 3px solid var(--accent);
  }

  .ai-option-icon {
    font-size: 1.25rem;
  }

  .ai-option-info {
    flex: 1;
  }

  .ai-option-name {
    display: block;
    font-weight: 600;
    color: var(--text-primary);
  }

  .ai-option-desc {
    display: block;
    font-size: 0.85rem;
    color: var(--text-secondary);
    margin-top: 0.25rem;
  }

  .ai-option-check {
    color: var(--accent);
    font-weight: 600;
    opacity: 0;
    transition: all 0.3s ease;
  }

  .ai-option.active .ai-option-check {
    opacity: 1;
  }

  .chatbot-messages {
    padding: 2rem;
    height: 600px;
    overflow-y: auto;
  }

  .chatbot-message {
    display: flex;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .chatbot-avatar {
    width: 40px;
    height: 40px;
    position: relative;
    transform-style: preserve-3d;
    transform: rotateX(10deg) rotateY(-10deg);
    flex-shrink: 0;
  }

  .cb-face {
    position: absolute;
    border-radius: 8px;
  }

  .cb-face-front {
    width: 28px;
    height: 28px;
    background: linear-gradient(135deg, var(--accent), var(--accent-purple));
    transform: translateZ(14px);
    top: 6px;
    left: 6px;
  }

  .cb-face-top {
    width: 28px;
    height: 16px;
    background: rgba(41, 151, 255, 0.6);
    transform: rotateX(90deg) translateZ(6px);
    top: -4px;
    left: 6px;
  }

  .cb-face-right {
    width: 16px;
    height: 28px;
    background: rgba(139, 92, 246, 0.6);
    transform: rotateY(90deg) translateZ(22px);
    top: 6px;
    left: 6px;
  }

  .chatbot-bubble {
    flex: 1;
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.06);
    border-radius: 16px;
    padding: 1.5rem;
  }

  .chatbot-bubble p {
    color: var(--text-primary);
    line-height: 1.6;
  }

  .chatbot-input {
    display: flex;
    gap: 1rem;
    padding: 2rem;
    background: rgba(255, 255, 255, 0.05);
    border-top: 1px solid rgba(255, 255, 255, 0.06);
  }

  .chatbot-input input {
    flex: 1;
    padding: 1rem 1.5rem;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    color: var(--text-primary);
    font-size: 1rem;
  }

  .chatbot-input input::placeholder {
    color: var(--text-secondary);
  }

  .chatbot-input button {
    padding: 1rem 2rem;
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-purple) 100%);
    border: none;
    border-radius: 12px;
    color: white;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .chatbot-input button:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(41, 151, 255, 0.3);
  }

  @media (max-width: 768px) {
    .chatbot-hero h1 {
      font-size: 2.5rem;
    }

    .chatbot-header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .ai-selector {
      margin-left: 0;
      width: 100%;
    }

    .chatbot-messages {
      height: 500px;
    }
  }
</style>

<script>
  // Simple chatbot functionality
  function toggleAISelector(type: string) {
    const dropdown = document.getElementById(`${type}-ai-dropdown`);
    if (dropdown) {
      dropdown.classList.toggle('show');
    }
  }

  function selectAI(type: string, ai: string) {
    const options = document.querySelectorAll(`.ai-option[data-ai="${ai}"]`);
    options.forEach(option => {
      option.classList.add('active');
    });

    // Remove active class from other options
    document.querySelectorAll('.ai-option:not([data-ai="${ai}"])').forEach(option => {
      option.classList.remove('active');
    });

    // Update selected AI in UI
    const aiName = document.getElementById(`${type}-ai-name`);
    const aiIcon = document.getElementById(`${type}-ai-icon`);
    
    if (ai === 'doubao-pro' && aiName && aiIcon) {
      aiName.textContent = 'Ë±ÜÂåÖ 2.0 Pro';
      aiIcon.textContent = '‚ö°';
    } else if (ai === 'qwen' && aiName && aiIcon) {
      aiName.textContent = 'Qwen';
      aiIcon.textContent = 'üîÆ';
    } else if (ai === 'doubao-code' && aiName && aiIcon) {
      aiName.textContent = 'Ë±ÜÂåÖ 2.0 Code';
      aiIcon.textContent = '‚å®Ô∏è';
    }

    // Close dropdown
    const dropdown = document.getElementById(`${type}-ai-dropdown`);
    if (dropdown) {
      dropdown.classList.remove('show');
    }
  }

  function handleChatKeypress(event: KeyboardEvent) {
    if (event.key === 'Enter') {
      sendChatMessage();
    }
  }

  function sendChatMessage() {
    const input = document.getElementById('chatbot-input') as HTMLInputElement;
    if (!input) return;
    
    const message = input.value.trim();
    
    if (message) {
      // Add user message
      const messagesContainer = document.getElementById('chatbot-messages');
      if (messagesContainer) {
        messagesContainer.innerHTML += `
          <div class="chatbot-message">
            <div class="chatbot-avatar">
              <div style="width: 40px; height: 40px; border-radius: 50%; background: var(--accent); display: flex; justify-content: center; align-items: center; color: white; font-weight: 600;">
                U
              </div>
            </div>
            <div class="chatbot-bubble">
              <p>${message}</p>
            </div>
          </div>
        `;
        
        // Clear input
        input.value = '';
        
        // Scroll to bottom
        messagesContainer.scrollTop = messagesContainer.scrollHeight;
        
        // Simulate AI response
        setTimeout(() => {
          if (messagesContainer) {
            messagesContainer.innerHTML += `
              <div class="chatbot-message">
                <div class="chatbot-avatar">
                  <div class="cb-face cb-face-front"></div>
                  <div class="cb-face cb-face-top"></div>
                  <div class="cb-face cb-face-right"></div>
                </div>
                <div class="chatbot-bubble">
                  <p>Thank you for your message. I'm an AI assistant designed to help you with various tasks. How can I assist you further today?</p>
                </div>
              </div>
            `;
            
            // Scroll to bottom
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
          }
        }, 1000);
      }
    }
  }

  // Close dropdown when clicking outside
  document.addEventListener('click', (e) => {
    if (e.target) {
      const target = e.target as HTMLElement;
      if (!target.closest('.ai-selector')) {
        document.querySelectorAll('.ai-selector-dropdown').forEach(dropdown => {
          dropdown.classList.remove('show');
        });
      }
    }
  });
</script>