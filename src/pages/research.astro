---
import Layout from '@layouts/Layout.astro';

const timeline = [
  {
    year: '2024',
    title: 'GPT-4o 发布',
    description: 'OpenAI 发布多模态模型 GPT-4o，实现文本、音频、图像的实时处理。'
  },
  {
    year: '2023',
    title: 'ChatGPT 爆发式增长',
    description: 'ChatGPT 成为历史上增长最快的消费应用，推动AI技术普及。'
  },
  {
    year: '2022',
    title: 'ChatGPT 发布',
    description: 'OpenAI 发布 ChatGPT，开启大语言模型时代。'
  },
  {
    year: '2020',
    title: 'GPT-3 发布',
    description: 'OpenAI 发布 GPT-3，展示了大规模语言模型的惊人能力。'
  },
  {
    year: '2017',
    title: 'Transformer 架构',
    description: 'Google 发布 "Attention Is All You Need" 论文，奠定现代AI基础。'
  },
  {
    year: '2016',
    title: 'AlphaGo 战胜李世石',
    description: 'DeepMind 的 AlphaGo 在围棋比赛中击败世界冠军李世石。'
  },
  {
    year: '2012',
    title: 'AlexNet 突破',
    description: '深度学习在 ImageNet 竞赛中取得突破性进展，开启深度学习时代。'
  },
];
---

<Layout 
  title="研究 - Meow Note"
  description="人工智能发展史上的重要时刻"
>
  <section class="research">
    <div class="research-container">
      <div class="research-header">
        <h1 class="research-title">AI 大事记</h1>
        <p class="research-subtitle">人工智能发展史上的重要时刻</p>
      </div>
      
      <div class="timeline">
        {timeline.map((item, index) => (
          <div class="timeline-item">
            <div class="timeline-marker">
              <div class="timeline-dot"></div>
              {index < timeline.length - 1 && <div class="timeline-line"></div>}
            </div>
            <div class="timeline-content hover-lift">
              <span class="timeline-year">{item.year}</span>
              <h3 class="timeline-item-title">{item.title}</h3>
              <p class="timeline-description">{item.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .research {
    min-height: 100vh;
    padding: calc(var(--header-total-height) + var(--space-4)) var(--space-4) var(--space-12);
  }
  
  .research-container {
    max-width: var(--container-md);
    margin: 0 auto;
  }
  
  .research-header {
    text-align: center;
    margin-bottom: var(--space-12);
  }
  
  .research-title {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-3);
  }
  
  @media (min-width: 768px) {
    .research-title {
      font-size: var(--text-4xl);
    }
  }
  
  .research-subtitle {
    color: var(--text-secondary);
    font-size: var(--text-lg);
  }
  
  .timeline {
    display: flex;
    flex-direction: column;
    gap: var(--space-6);
  }
  
  .timeline-item {
    display: flex;
    gap: var(--space-4);
  }
  
  .timeline-marker {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex-shrink: 0;
  }
  
  .timeline-dot {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: var(--color-primary);
    border: 2px solid var(--bg-primary);
    box-shadow: 0 0 0 4px var(--color-primary);
  }
  
  .timeline-line {
    width: 2px;
    flex: 1;
    background: var(--border-primary);
    margin-top: var(--space-2);
  }
  
  .timeline-content {
    flex: 1;
    padding: var(--space-5);
    background: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: var(--radius-xl);
    box-shadow: var(--card-shadow);
    margin-bottom: var(--space-2);
  }
  
  .timeline-year {
    display: inline-block;
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--color-primary);
    margin-bottom: var(--space-2);
  }
  
  .timeline-item-title {
    font-size: var(--text-xl);
    font-weight: var(--font-semibold);
    color: var(--text-primary);
    margin-bottom: var(--space-2);
  }
  
  .timeline-description {
    font-size: var(--text-base);
    color: var(--text-secondary);
    line-height: var(--leading-relaxed);
  }
</style>
