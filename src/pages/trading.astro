      const sellLabel = '卖出';
      
      return `
        <div class="chart-bar-wrapper">
          <div class="chart-bar-group">
            <div class="chart-bar buy" style="height: ${Math.max(buyHeight, 4)}px" 
                 data-value="${buyLabel}: ${formatCurrency(d.buy_amount || 0)}"
