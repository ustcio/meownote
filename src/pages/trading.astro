  function toggleSellPanel(id) {
    const panel = document.getElementById(`sell-panel-${id}`);
    if (panel) {
      panel.classList.toggle('hidden');
    }
  }

  function updateSellPreview(id, buyPrice) {
    const sellPriceEl = document.getElementById(`sell-price-${id}`);
    const sellQtyEl = document.getElementById(`sell-qty-${id}`);
    const totalEl = document.getElementById(`sell-total-${id}`);
    const profitEl = document.getElementById(`sell-profit-${id}`);
    const submitBtn = document.getElementById(`sell-submit-${id}`);

    if (!sellPriceEl || !sellQtyEl || !totalEl || !profitEl || !submitBtn) return;

    const sellPrice = parseFloat(sellPriceEl.value) || 0;
    const sellQty = parseFloat(sellQtyEl.value) || 0;
    const total = sellPrice * sellQty;
    const profit = (sellPrice - buyPrice) * sellQty;

    totalEl.textContent = formatCurrency(total);
    profitEl.textContent = formatCurrency(profit);
    
    profitEl.classList.remove('positive', 'negative');
    if (profit > 0) {
      profitEl.classList.add('positive');
    } else if (profit < 0) {
      profitEl.classList.add('negative');
    }

    submitBtn.disabled = !(sellPrice > 0 && sellQty > 0);
  }

  async function saveEdit(id, type) {
    const priceEl = document.getElementById(`edit-price-${id}`);
    const qtyEl = document.getElementById(`edit-qty-${id}`);
    const sellPriceEl = document.getElementById(`edit-sell-price-${id}`);

    const newPrice = parseFloat(priceEl?.value) || 0;
    const newQty = parseFloat(qtyEl?.value) || 0;
    const newSellPrice = type === 'sell' ? parseFloat(sellPriceEl?.value) : null;

    if (newPrice <= 0 || newQty <= 0) {
      showNotification(lang === 'zh' ? '请输入有效的价格和数量' : 'Please enter valid price and quantity', 'error');
      return;
    }

    try {
      const result = await apiRequest(`/api/trading/transaction?id=${id}`, {
        method: 'PUT',
        body: JSON.stringify({
          price: newPrice,
          quantity: newQty,
          actualSellPrice: newSellPrice
        })
      });

      if (result.success) {
        showNotification(lang === 'zh' ? '修改成功' : 'Updated successfully', 'success');
        toggleEditPanel(id);
        setTimeout(() => loadDashboard(), 300);
      } else {
        showNotification(result.error || (lang === 'zh' ? '修改失败' : 'Update failed'), 'error');
      }
    } catch (error) {
      console.error('Save edit failed:', error);
      showNotification(lang === 'zh' ? '修改失败' : 'Update failed', 'error');
    }
  }

  async function confirmSell(id, buyPrice) {
    const sellPriceEl = document.getElementById(`sell-price-${id}`);
    const sellQtyEl = document.getElementById(`sell-qty-${id}`);

    const sellPrice = parseFloat(sellPriceEl?.value) || 0;
    const sellQty = parseFloat(sellQtyEl?.value) || 0;

    if (sellPrice <= 0 || sellQty <= 0) {
      showNotification(lang === 'zh' ? '请输入有效的卖出价格和数量' : 'Please enter valid sell price and quantity', 'error');
      return;
    }

    const profit = (sellPrice - buyPrice) * sellQty;
    const confirmMsg = lang === 'zh' 
      ? `确认卖出 ${sellQty.toFixed(3)}g，价格 ¥${sellPrice.toFixed(2)}？\n预期收益: ${formatCurrency(profit)}`
      : `Confirm selling ${sellQty.toFixed(3)}g at ¥${sellPrice.toFixed(2)}?\nExpected profit: ${formatCurrency(profit)}`;

    if (!confirm(confirmMsg)) return;

    try {
      const result = await apiRequest('/api/trading/sell', {
        method: 'POST',
        body: JSON.stringify({
          buyTransactionId: id,
          actualSellPrice: sellPrice,
          quantity: sellQty
        })
      });

      if (result.success) {
        showNotification(lang === 'zh' ? '卖出成功' : 'Sold successfully', 'success');
        toggleSellPanel(id);
        setTimeout(() => loadDashboard(), 300);
      } else {
        showNotification(result.error || (lang === 'zh' ? '卖出失败' : 'Sell failed'), 'error');
      }
    } catch (error) {
      console.error('Sell failed:', error);
      showNotification(lang === 'zh' ? '卖出失败' : 'Sell failed', 'error');
    }
  }

  function renderPagination(pagination) {
    const container = document.getElementById('pagination');
    if (!container) return;

    currentPage = pagination.page;
    totalPages = pagination.totalPages;

    if (totalPages <= 1) {
      container.innerHTML = '';
      return;
    }

    let html = '';
    
    html += `<button ${currentPage === 1 ? 'disabled' : ''} onclick="loadTransactions(${currentPage - 1})">${lang === 'zh' ? '上一页' : 'Prev'}</button>`;
    
    for (let i = 1; i <= totalPages; i++) {
      if (i === 1 || i === totalPages || (i >= currentPage - 1 && i <= currentPage + 1)) {
        html += `<button class="${i === currentPage ? 'active' : ''}" onclick="loadTransactions(${i})">${i}</button>`;
      } else if (i === currentPage - 2 || i === currentPage + 2) {
        html += '<span>...</span>';
      }
    }

    html += `<button ${currentPage === totalPages ? 'disabled' : ''} onclick="loadTransactions(${currentPage + 1})">${lang === 'zh' ? '下一页' : 'Next'}</button>`;

    container.innerHTML = html;
  }

