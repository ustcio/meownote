    toleranceStatus.className = 'tolerance-status ' + status;
    switch (status) {
      case 'saved':
        toleranceStatus.textContent = 'Â∑≤‰øùÂ≠ò';
        break;
      case 'unsaved':
        toleranceStatus.textContent = 'Êú™‰øùÂ≠ò';
        break;
      case 'saving':
