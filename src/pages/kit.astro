---
import Layout from '@layouts/Layout.astro';

const lang = Astro.url.pathname.startsWith('/zh') ? 'zh' : 'en';

const tools = [
  {
    id: 'gold',
    href: '/kit/gold',
    icon: 'clock',
    title: lang === 'zh' ? '黄金价格' : 'Gold Price',
    desc: lang === 'zh' ? '实时追踪国内外黄金价格' : 'Track domestic and international gold prices'
  },
  {
    id: 'academic',
    href: '/kit/academic',
    icon: 'book',
    title: lang === 'zh' ? '学术工具' : 'Academic Tools',
    desc: lang === 'zh' ? 'DOI引用转换、BibTeX生成等' : 'DOI citation, BibTeX generator & more'
  }
];
---

<Layout 
  title={lang === 'zh' ? '工具箱 - Meow Note' : 'Toolkit - Meow Note'}
  description={lang === 'zh' ? '实用工具集合' : 'Useful tools collection'}
>
  <section class="kit">
    <div class="kit-container">
      <div class="kit-header">
        <h1 class="kit-title">{lang === 'zh' ? '工具箱' : 'Toolkit'}</h1>
        <p class="kit-desc">{lang === 'zh' ? '精选实用工具' : 'Curated useful tools'}</p>
      </div>
      
      <div class="tools-list">
        {tools.map(tool => (
          <a href={tool.href} class="tool-item">
            <div class="tool-icon">
              {tool.icon === 'clock' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <circle cx="12" cy="12" r="10"/>
                  <path d="M12 6v6l4 2"/>
                </svg>
              )}
              {tool.icon === 'book' && (
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/>
                  <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/>
                </svg>
              )}
            </div>
            <div class="tool-content">
              <span class="tool-title">{tool.title}</span>
              <span class="tool-desc">{tool.desc}</span>
            </div>
            <svg class="tool-arrow" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9 18 15 12 9 6"/>
            </svg>
          </a>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .kit {
    min-height: 100vh;
    padding: calc(var(--header-height) + var(--space-16)) var(--space-4) var(--space-16);
  }
  
  .kit-container {
    max-width: 640px;
    margin: 0 auto;
  }
  
  .kit-header {
    margin-bottom: var(--space-10);
  }
  
  .kit-title {
    font-size: var(--text-3xl);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-2);
  }
  
  .kit-desc {
    font-size: var(--text-base);
    color: var(--text-secondary);
  }
  
  .tools-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
  }
  
  .tool-item {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    padding: var(--space-4);
    background: var(--bg-secondary);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-xl);
    transition: all var(--duration-fast) var(--ease-default);
  }
  
  .tool-item:hover {
    background: var(--bg-tertiary);
    border-color: var(--border-hover);
  }
  
  .tool-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--bg-primary);
    border-radius: var(--radius-lg);
    color: var(--text-secondary);
    flex-shrink: 0;
  }
  
  .tool-item:hover .tool-icon {
    color: var(--color-accent-blue);
  }
  
  .tool-content {
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;
    gap: 2px;
  }
  
  .tool-title {
    font-size: var(--text-base);
    font-weight: var(--font-medium);
    color: var(--text-primary);
  }
  
  .tool-desc {
    font-size: var(--text-sm);
    color: var(--text-tertiary);
  }
  
  .tool-arrow {
    color: var(--text-tertiary);
    flex-shrink: 0;
    transition: transform var(--duration-fast) var(--ease-default);
  }
  
  .tool-item:hover .tool-arrow {
    transform: translateX(4px);
    color: var(--text-secondary);
  }
</style>
