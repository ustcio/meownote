---
import { getLangFromUrl, useTranslations, type Lang } from '@i18n';
import LanguageSwitcher from '@components/ui/LanguageSwitcher.astro';
import ThemeToggle from '@components/ui/ThemeToggle.astro';
import Icon from '@components/ui/Icon.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

const navItems = [
  { href: '/', label: t('nav.home'), id: 'home' },
  { href: '/research', label: t('nav.research'), id: 'research' },
  { href: '/chatbot', label: t('nav.chatbot'), id: 'chatbot' },
  { href: '/kit', label: t('nav.kit'), id: 'kit' },
  { href: '/about', label: t('nav.about'), id: 'about' },
];

const currentPath = Astro.url.pathname;
---

<header class="header">
  <div class="header-container">
    <a href="/" class="logo">
      <video 
        class="logo-video" 
        autoplay 
        loop 
        muted 
        playsinline 
        preload="auto" 
        poster="/favicon-32x32.png"
      >
        <source src="/logo.mp4" type="video/mp4" />
      </video>
      <span class="logo-text">Meow Note</span>
    </a>
    
    <nav class="nav" aria-label="Main navigation">
      <ul class="nav-list">
        {navItems.map((item) => (
          <li>
            <a 
              href={item.href}
              class:list={['nav-link', { active: currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href)) }]}
            >
              {item.label}
            </a>
          </li>
        ))}
      </ul>
    </nav>
    
    <div class="header-actions">
      <ThemeToggle />
      <LanguageSwitcher />
      
      <button 
        class="mobile-menu-btn" 
        aria-label="Toggle menu" 
        aria-expanded="false"
        aria-controls="mobile-nav"
      >
        <Icon name="menu" size={18} />
      </button>
    </div>
  </div>
  
  <nav id="mobile-nav" class="mobile-nav" aria-label="Mobile navigation">
    <ul class="mobile-nav-list">
      {navItems.map((item) => (
        <li>
          <a 
            href={item.href}
            class:list={['mobile-nav-link', { active: currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href)) }]}
          >
            {item.label}
          </a>
        </li>
      ))}
    </ul>
  </nav>
</header>

<script>
  const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
  const mobileNav = document.getElementById('mobile-nav');
  
  mobileMenuBtn?.addEventListener('click', () => {
    const isExpanded = mobileMenuBtn.getAttribute('aria-expanded') === 'true';
    mobileMenuBtn.setAttribute('aria-expanded', String(!isExpanded));
    mobileNav?.classList.toggle('open');
  });
  
  document.querySelectorAll('.mobile-nav-link').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenuBtn?.setAttribute('aria-expanded', 'false');
      mobileNav?.classList.remove('open');
    });
  });
  
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      mobileMenuBtn?.setAttribute('aria-expanded', 'false');
      mobileNav?.classList.remove('open');
    }
  });
</script>

<style>
  .header {
    position: fixed;
    top: var(--space-4);
    left: var(--space-4);
    right: var(--space-4);
    z-index: var(--z-fixed);
    background: var(--glass-bg);
    backdrop-filter: var(--surface-blur-heavy);
    -webkit-backdrop-filter: var(--surface-blur-heavy);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-float);
    transition: background var(--duration-normal) var(--ease-default),
                border-color var(--duration-normal) var(--ease-default),
                box-shadow var(--duration-normal) var(--ease-default);
  }
  
  .header:hover {
    background: var(--glass-bg-hover);
    border-color: var(--glass-border-hover);
  }
  
  @media (min-width: 768px) {
    .header {
      top: var(--space-5);
      left: var(--space-6);
      right: var(--space-6);
    }
  }
  
  @media (min-width: 1024px) {
    .header {
      top: var(--space-6);
      left: var(--space-8);
      right: var(--space-8);
    }
  }
  
  .header-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: var(--container-xl);
    margin: 0 auto;
    padding: var(--space-3) var(--space-4);
    height: var(--header-height);
  }
  
  @media (min-width: 768px) {
    .header-container {
      padding: var(--space-3) var(--space-5);
    }
  }
  
  .logo {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    text-decoration: none;
    color: var(--text-primary);
    font-family: var(--font-display);
    font-weight: var(--font-medium);
    font-size: var(--text-base);
  }
  
  .logo-video {
    width: 32px;
    height: 32px;
    border-radius: var(--radius-md);
    object-fit: cover;
  }
  
  .logo-text {
    display: none;
  }
  
  @media (min-width: 640px) {
    .logo-text {
      display: block;
    }
  }
  
  .nav {
    display: none;
  }
  
  @media (min-width: 768px) {
    .nav {
      display: block;
    }
  }
  
  .nav-list {
    display: flex;
    align-items: center;
    gap: var(--space-1);
    list-style: none;
  }
  
  .nav-link {
    position: relative;
    display: block;
    padding: var(--space-2) var(--space-4);
    color: var(--text-secondary);
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    text-decoration: none;
    border-radius: var(--radius-lg);
    transition: color var(--duration-fast) var(--ease-default),
                background-color var(--duration-fast) var(--ease-default);
  }
  
  .nav-link:hover {
    color: var(--text-primary);
    background-color: var(--bg-tertiary);
  }
  
  .nav-link.active {
    color: var(--text-primary);
    background-color: var(--bg-tertiary);
  }
  
  .header-actions {
    display: flex;
    align-items: center;
    gap: var(--space-1);
  }
  
  .mobile-menu-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    color: var(--text-secondary);
    border-radius: var(--radius-lg);
    transition: color var(--duration-fast) var(--ease-default),
                background-color var(--duration-fast) var(--ease-default);
  }
  
  .mobile-menu-btn:hover {
    color: var(--text-primary);
    background-color: var(--bg-tertiary);
  }
  
  @media (min-width: 768px) {
    .mobile-menu-btn {
      display: none;
    }
  }
  
  .mobile-nav {
    display: none;
    position: absolute;
    top: calc(100% + var(--space-2));
    left: 0;
    right: 0;
    background: var(--glass-bg);
    backdrop-filter: var(--surface-blur-heavy);
    -webkit-backdrop-filter: var(--surface-blur-heavy);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-2xl);
    padding: var(--space-3);
    animation: slideDown var(--duration-fast) var(--ease-default);
    box-shadow: var(--shadow-float);
  }
  
  .mobile-nav.open {
    display: block;
  }
  
  @media (min-width: 768px) {
    .mobile-nav {
      display: none !important;
    }
  }
  
  .mobile-nav-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }
  
  .mobile-nav-link {
    display: block;
    padding: var(--space-3) var(--space-4);
    color: var(--text-secondary);
    font-family: var(--font-sans);
    font-weight: var(--font-medium);
    font-size: var(--text-sm);
    text-decoration: none;
    border-radius: var(--radius-lg);
    transition: color var(--duration-fast) var(--ease-default),
                background-color var(--duration-fast) var(--ease-default);
  }
  
  .mobile-nav-link:hover,
  .mobile-nav-link.active {
    color: var(--text-primary);
    background-color: var(--bg-tertiary);
  }
  
  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
