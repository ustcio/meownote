---
import { getLangFromUrl, useTranslations, type Lang } from '@i18n';
import LanguageSwitcher from '@components/ui/LanguageSwitcher.astro';
import ThemeToggle from '@components/ui/ThemeToggle.astro';
import Icon from '@components/ui/Icon.astro';
import AuthModal from '@components/ui/AuthModal.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Helper function to get localized path
function getLocalizedPath(path: string): string {
  if (lang === 'en') return path;
  return `/zh${path === '/' ? '' : path}`;
}

const navItems = [
  { href: getLocalizedPath('/'), label: t('nav.home'), id: 'home' },
  { href: getLocalizedPath('/chatbot'), label: t('nav.chatbot'), id: 'chatbot' },
  { href: getLocalizedPath('/kit'), label: t('nav.kit'), id: 'kit' },
  { href: getLocalizedPath('/research'), label: t('nav.research'), id: 'research' },
  { href: getLocalizedPath('/about'), label: t('nav.about'), id: 'about' },
];

const currentPath = Astro.url.pathname;
---

<header class="header">
  <div class="header-container">
      <a href={getLocalizedPath('/')} class="logo">
      <video 
        class="logo-video" 
        autoplay 
        loop 
        muted 
        playsinline 
        preload="auto" 
        poster="/favicon-32x32.png"
      >
        <source src="/logo.mp4" type="video/mp4" />
      </video>
      <span class="logo-text">Meow Note</span>
    </a>
    
    <nav class="nav" aria-label={t('aria.mainNav')}>
      <ul class="nav-list">
        {navItems.map((item) => (
          <li>
            <a 
              href={item.href}
              class:list={['nav-link', { active: currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href)) }]}
            >
              {item.label}
            </a>
          </li>
        ))}
        <li>
          <a 
            href={getLocalizedPath('/trading')}
            class:list={['nav-link admin-nav-link', { active: currentPath.startsWith('/trading') }]}
          >
            <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-right: 4px;">
              <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
              <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
            </svg>
            {lang === 'zh' ? '交易管理' : 'Trading'}
          </a>
        </li>
      </ul>
    </nav>
    
    <div class="header-actions">
      <div class="header-utils">
        <ThemeToggle />
        <LanguageSwitcher />
        
        <div class="user-menu" id="user-menu">
          <button class="auth-btn" id="auth-btn" aria-label={t('auth.login')}>
            <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
              <circle cx="12" cy="7" r="4"></circle>
            </svg>
          </button>
          <div class="user-dropdown" id="user-dropdown">
            <div class="dropdown-header">
              <span class="dropdown-username" id="dropdown-username"></span>
            </div>
            <div class="dropdown-divider"></div>
            <a href={getLocalizedPath('/profile')} class="dropdown-item">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
              </svg>
              <span>{t('nav.profile')}</span>
            </a>
            <a href={getLocalizedPath('/trading')} class="dropdown-item admin-link" id="admin-link">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
                <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
              </svg>
              <span>{lang === 'zh' ? '交易管理' : 'Trading'}</span>
            </a>
            <button class="dropdown-item logout" id="dropdown-logout">
              <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9 21H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h4"></path>
                <polyline points="16 17 21 12 16 7"></polyline>
                <line x1="21" y1="12" x2="9" y2="12"></line>
              </svg>
              <span>{t('auth.logout')}</span>
            </button>
          </div>
        </div>
      </div>
      
      <button
        class="mobile-menu-btn"
        aria-label={t('aria.toggleMenu')}
        aria-expanded="false"
        aria-controls="mobile-nav"
      >
        <Icon name="menu" size={18} />
      </button>
    </div>
  </div>
  
  <nav id="mobile-nav" class="mobile-nav" aria-label={t('aria.mobileNav')}>
    <ul class="mobile-nav-list">
      {navItems.map((item) => (
        <li>
          <a 
            href={item.href}
            class:list={['mobile-nav-link', { active: currentPath === item.href || (item.href !== '/' && currentPath.startsWith(item.href)) }]}
          >
            {item.label}
          </a>
        </li>
      ))}
      <li>
        <a 
          href={getLocalizedPath('/trading')}
          class:list={['mobile-nav-link admin-mobile-link', { active: currentPath.startsWith('/trading') }]}
        >
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="margin-right: 6px;">
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
          </svg>
          {lang === 'zh' ? '交易管理' : 'Trading'}
        </a>
      </li>
    </ul>
    <div class="mobile-nav-actions">
      <button class="mobile-auth-btn" id="mobile-auth-btn">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
          <circle cx="12" cy="7" r="4"></circle>
        </svg>
        <span>{t('auth.login')}</span>
      </button>
    </div>
  </nav>
</header>

<AuthModal />

<script>
  const mobileMenuBtn = document.querySelector('.mobile-menu-btn');
  const mobileNav = document.getElementById('mobile-nav');
  const authBtn = document.getElementById('auth-btn');
  const mobileAuthBtn = document.getElementById('mobile-auth-btn');
  const userMenu = document.getElementById('user-menu');
  const dropdownLogout = document.getElementById('dropdown-logout');
  const dropdownUsername = document.getElementById('dropdown-username');
  
  mobileMenuBtn?.addEventListener('click', () => {
    const isExpanded = mobileMenuBtn.getAttribute('aria-expanded') === 'true';
    mobileMenuBtn.setAttribute('aria-expanded', String(!isExpanded));
    mobileNav?.classList.toggle('open');
  });
  
  document.querySelectorAll('.mobile-nav-link').forEach(link => {
    link.addEventListener('click', () => {
      mobileMenuBtn?.setAttribute('aria-expanded', 'false');
      mobileNav?.classList.remove('open');
    });
  });
  
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      mobileMenuBtn?.setAttribute('aria-expanded', 'false');
      mobileNav?.classList.remove('open');
      userMenu?.classList.remove('open');
    }
  });
  
  function openAuthModal() {
    (window as any).openAuthModal?.('login');
  }
  
  authBtn?.addEventListener('click', (e) => {
    const user = localStorage.getItem('user');
    if (user) {
      e.stopPropagation();
      userMenu?.classList.toggle('open');
    } else {
      openAuthModal();
    }
  });
  
  document.addEventListener('click', (e) => {
    if (!userMenu?.contains(e.target as Node)) {
      userMenu?.classList.remove('open');
    }
  });
  
  mobileAuthBtn?.addEventListener('click', () => {
    const user = localStorage.getItem('user');
    const currentLang = localStorage.getItem('preferred-lang') || 'en';
    const profilePath = currentLang === 'zh' ? '/zh/profile' : '/profile';
    if (user) {
      window.location.href = profilePath;
    } else {
      mobileNav?.classList.remove('open');
      mobileMenuBtn?.setAttribute('aria-expanded', 'false');
      openAuthModal();
    }
  });
  
  dropdownLogout?.addEventListener('click', () => {
    localStorage.removeItem('auth_token');
    localStorage.removeItem('user');
    window.dispatchEvent(new CustomEvent('auth:logout'));
    window.location.reload();
  });
  
  function updateAuthUI() {
    const user = localStorage.getItem('user');
    const mobileAuthBtnSpan = mobileAuthBtn?.querySelector('span');

    if (user) {
      try {
        const userData = JSON.parse(user);
        if (dropdownUsername) dropdownUsername.textContent = userData.username || '';
        if (mobileAuthBtnSpan) mobileAuthBtnSpan.textContent = userData.username || '';
        userMenu?.classList.add('logged-in');
      } catch (e) {
        // Invalid JSON in localStorage, treat as not logged in
        console.warn('Failed to parse user data:', e);
        if (dropdownUsername) dropdownUsername.textContent = '';
        userMenu?.classList.remove('logged-in');
      }
    } else {
      if (dropdownUsername) dropdownUsername.textContent = '';
      userMenu?.classList.remove('logged-in');
    }
  }
  
  window.addEventListener('auth:login', updateAuthUI);
  window.addEventListener('auth:logout', updateAuthUI);
  document.addEventListener('DOMContentLoaded', updateAuthUI);
</script>

<style>
  .header {
    position: fixed;
    top: var(--space-4);
    left: var(--space-4);
    right: var(--space-4);
    z-index: var(--z-fixed);
    background: var(--glass-bg);
    backdrop-filter: var(--surface-blur-heavy);
    -webkit-backdrop-filter: var(--surface-blur-heavy);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-float);
    transition: background var(--duration-normal) var(--ease-default),
                border-color var(--duration-normal) var(--ease-default),
                box-shadow var(--duration-normal) var(--ease-default);
  }
  
  .header:hover {
    background: var(--glass-bg-hover);
    border-color: var(--glass-border-hover);
  }
  
  @media (min-width: 768px) {
    .header {
      top: var(--space-5);
      left: var(--space-6);
      right: var(--space-6);
    }
  }
  
  @media (min-width: 1024px) {
    .header {
      top: var(--space-6);
      left: var(--space-8);
      right: var(--space-8);
    }
  }
  
  .header-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: var(--container-xl);
    margin: 0 auto;
    padding: var(--space-3) var(--space-4);
    height: var(--header-height);
  }
  
  @media (min-width: 768px) {
    .header-container {
      padding: var(--space-3) var(--space-5);
    }
  }
  
  .logo {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    text-decoration: none;
    color: var(--text-primary);
    flex-shrink: 0;
  }
  
  .logo-video {
    width: 36px;
    height: 36px;
    border-radius: var(--radius-lg);
    object-fit: cover;
    object-position: center;
    transform: scale(1.1);
  }
  
  .logo-text {
    display: none;
    font-family: var(--font-brand);
    font-size: var(--text-lg);
    font-weight: var(--font-semibold);
    letter-spacing: 0.02em;
  }
  
  @media (min-width: 640px) {
    .logo-text {
      display: block;
    }
  }
  
  .nav {
    display: none;
  }
  
  @media (min-width: 1024px) {
    .nav {
      display: block;
    }
  }
  
  .nav-list {
    display: flex;
    align-items: center;
    gap: var(--space-1);
    list-style: none;
  }
  
  .nav-link {
    position: relative;
    display: block;
    padding: var(--space-2) var(--space-4);
    color: var(--text-secondary);
    font-family: var(--font-sans);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    text-decoration: none;
    border-radius: var(--radius-lg);
    transition: color var(--duration-fast) var(--ease-default),
                background-color var(--duration-fast) var(--ease-default);
  }
  
  .nav-link:hover {
    color: var(--text-primary);
    background-color: var(--bg-tertiary);
  }
  
  .nav-link.active {
    color: var(--text-primary);
    background-color: var(--bg-tertiary);
  }
  
  .nav-link.admin-nav-link {
    display: flex;
    align-items: center;
    color: var(--color-accent-purple);
    background: rgba(191, 90, 242, 0.08);
  }
  
  .nav-link.admin-nav-link:hover {
    background: rgba(191, 90, 242, 0.15);
  }
  
  .nav-link.admin-nav-link.active {
    background: rgba(191, 90, 242, 0.15);
    color: var(--color-accent-purple);
  }
  
  .header-actions {
    display: flex;
    align-items: center;
    gap: var(--space-3);
    flex-shrink: 0;
  }
  
  .header-utils {
    display: flex;
    align-items: center;
    gap: var(--space-1);
  }
  
  .auth-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    color: var(--text-tertiary);
    border-radius: var(--radius-lg);
    transition: color var(--duration-fast) var(--ease-default),
                background-color var(--duration-fast) var(--ease-default);
  }
  
  .auth-btn:hover {
    color: var(--text-primary);
    background-color: var(--bg-tertiary);
  }
  
  .user-menu {
    position: relative;
  }
  
  .user-menu.logged-in .auth-btn {
    color: var(--color-primary);
  }
  
  .user-dropdown {
    position: absolute;
    top: 100%;
    right: 0;
    margin-top: var(--space-2);
    min-width: 180px;
    background: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-float);
    padding: var(--space-2);
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all var(--duration-fast) var(--ease-default);
    z-index: var(--z-dropdown);
  }
  
  .user-menu:hover .user-dropdown,
  .user-menu.open .user-dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }
  
  .dropdown-header {
    padding: var(--space-2) var(--space-3);
  }
  
  .dropdown-username {
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    color: var(--text-primary);
  }
  
  .dropdown-divider {
    height: 1px;
    background: var(--border-primary);
    margin: var(--space-2) 0;
  }
  
  .dropdown-item {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    width: 100%;
    padding: var(--space-2) var(--space-3);
    font-size: var(--text-sm);
    color: var(--text-secondary);
    border-radius: var(--radius-lg);
    transition: all var(--duration-fast) var(--ease-default);
    text-decoration: none;
    background: none;
    border: none;
    cursor: pointer;
  }
  
  .dropdown-item:hover {
    background: var(--bg-tertiary);
    color: var(--text-primary);
  }
  
  .dropdown-item.logout {
    color: #ef4444;
  }
  
  .dropdown-item.logout:hover {
    background: rgba(239, 68, 68, 0.1);
  }
  
  .dropdown-item.admin-link {
    color: var(--color-accent-purple);
  }
  
  .dropdown-item.admin-link:hover {
    background: rgba(191, 90, 242, 0.1);
  }
  
  .mobile-menu-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    color: var(--text-secondary);
    border-radius: var(--radius-lg);
    transition: color var(--duration-fast) var(--ease-default),
                background-color var(--duration-fast) var(--ease-default);
  }
  
  .mobile-menu-btn:hover {
    color: var(--text-primary);
    background-color: var(--bg-tertiary);
  }
  
  @media (min-width: 1024px) {
    .mobile-menu-btn {
      display: none;
    }
  }
  
  .mobile-nav {
    display: none;
    position: absolute;
    top: calc(100% + var(--space-2));
    left: 0;
    right: 0;
    background: var(--glass-bg);
    backdrop-filter: var(--surface-blur-heavy);
    -webkit-backdrop-filter: var(--surface-blur-heavy);
    border: 1px solid var(--glass-border);
    border-radius: var(--radius-2xl);
    padding: var(--space-4);
    animation: slideDown var(--duration-fast) var(--ease-default);
    box-shadow: var(--shadow-float);
  }
  
  .mobile-nav.open {
    display: block;
  }
  
  @media (min-width: 1024px) {
    .mobile-nav {
      display: none !important;
    }
  }
  
  .mobile-nav-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }
  
  .mobile-nav-link {
    display: block;
    padding: var(--space-3) var(--space-4);
    color: var(--text-secondary);
    font-family: var(--font-sans);
    font-weight: var(--font-medium);
    font-size: var(--text-sm);
    text-decoration: none;
    border-radius: var(--radius-lg);
    transition: color var(--duration-fast) var(--ease-default),
                background-color var(--duration-fast) var(--ease-default);
  }
  
  .mobile-nav-link:hover,
  .mobile-nav-link.active {
    color: var(--text-primary);
    background-color: var(--bg-tertiary);
  }
  
  .mobile-nav-link.admin-mobile-link {
    display: flex;
    align-items: center;
    color: var(--color-accent-purple);
    background: rgba(191, 90, 242, 0.08);
  }
  
  .mobile-nav-link.admin-mobile-link:hover,
  .mobile-nav-link.admin-mobile-link.active {
    background: rgba(191, 90, 242, 0.15);
    color: var(--color-accent-purple);
  }
  
  .mobile-nav-actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    margin-top: var(--space-4);
    padding-top: var(--space-4);
    border-top: 1px solid var(--border-primary);
  }
  
  .mobile-auth-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    width: 100%;
    padding: var(--space-3) var(--space-4);
    color: var(--text-secondary);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    border-radius: var(--radius-lg);
    transition: color var(--duration-fast) var(--ease-default),
                background-color var(--duration-fast) var(--ease-default);
    background: none;
    border: none;
    cursor: pointer;
  }
  
  .mobile-auth-btn:hover {
    color: var(--text-primary);
    background-color: var(--bg-tertiary);
  }
  
  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-8px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
