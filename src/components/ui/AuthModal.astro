---
import { getLangFromUrl, useTranslations } from '@i18n';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div class="auth-modal" id="auth-modal">
  <div class="auth-backdrop" id="auth-backdrop"></div>
  <div class="auth-container">
    <button class="auth-close" id="auth-close" aria-label="Close">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
    
    <div class="auth-header">
      <div class="auth-logo">
        <video autoplay loop muted playsinline width="48" height="48">
          <source src="/logo.mp4" type="video/mp4" />
        </video>
      </div>
      <h2 class="auth-title">{lang === 'zh' ? '欢迎回来' : 'Welcome Back'}</h2>
      <p class="auth-subtitle">{lang === 'zh' ? '登录您的账户继续' : 'Sign in to your account to continue'}</p>
    </div>
    
    <div class="auth-tabs">
      <button class="auth-tab active" data-tab="login">{t('auth.login')}</button>
      <button class="auth-tab" data-tab="signup">{t('auth.signup')}</button>
    </div>
    
    <form class="auth-form" id="login-form">
      <div class="form-group">
        <label for="login-username">{lang === 'zh' ? '用户名或邮箱' : 'Username or Email'}</label>
        <div class="input-wrapper">
          <svg class="input-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
          <input type="text" id="login-username" name="username" required placeholder={lang === 'zh' ? '请输入用户名或邮箱' : 'Enter username or email'} />
        </div>
      </div>
      <div class="form-group">
        <label for="login-password">{t('auth.password')}</label>
        <div class="input-wrapper">
          <svg class="input-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
          </svg>
          <input type="password" id="login-password" name="password" required placeholder={lang === 'zh' ? '请输入密码' : 'Enter password'} />
          <button type="button" class="toggle-password" id="toggle-login-pwd">
            <svg class="eye-open" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
              <circle cx="12" cy="12" r="3"></circle>
            </svg>
            <svg class="eye-closed hidden" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
              <line x1="1" y1="1" x2="23" y2="23"></line>
            </svg>
          </button>
        </div>
      </div>
      <div class="form-options">
        <label class="remember-me">
          <input type="checkbox" id="remember-me" />
          <span>{lang === 'zh' ? '记住我' : 'Remember me'}</span>
        </label>
      </div>
      <button type="submit" class="auth-submit" id="login-btn">
        <span class="btn-text">{t('auth.login')}</span>
        <span class="btn-loading hidden">
          <svg class="spinner" width="20" height="20" viewBox="0 0 24 24">
            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="3" fill="none" stroke-dasharray="31.4 31.4" stroke-linecap="round"/>
          </svg>
        </span>
      </button>
      <p class="auth-switch">{t('auth.noAccount')} <span class="auth-link" data-tab="signup">{t('auth.signup')}</span></p>
    </form>
    
    <form class="auth-form hidden" id="signup-form">
      <div class="form-group">
        <label for="signup-username">{t('auth.username')}</label>
        <div class="input-wrapper">
          <svg class="input-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
            <circle cx="12" cy="7" r="4"></circle>
          </svg>
          <input type="text" id="signup-username" name="username" required minlength="3" maxlength="20" placeholder={lang === 'zh' ? '3-20个字符' : '3-20 characters'} />
        </div>
      </div>
      <div class="form-group">
        <label for="signup-email">{t('auth.email')}</label>
        <div class="input-wrapper">
          <svg class="input-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
            <polyline points="22,6 12,13 2,6"></polyline>
          </svg>
          <input type="email" id="signup-email" name="email" required placeholder={lang === 'zh' ? '请输入邮箱地址' : 'Enter email address'} />
        </div>
      </div>
      <div class="form-group">
        <label for="signup-password">{t('auth.password')}</label>
        <div class="input-wrapper">
          <svg class="input-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect>
            <path d="M7 11V7a5 5 0 0 1 10 0v4"></path>
          </svg>
          <input type="password" id="signup-password" name="password" required minlength="6" placeholder={lang === 'zh' ? '至少6个字符' : 'At least 6 characters'} />
          <button type="button" class="toggle-password" id="toggle-signup-pwd">
            <svg class="eye-open" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
              <circle cx="12" cy="12" r="3"></circle>
            </svg>
            <svg class="eye-closed hidden" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M17.94 17.94A10.07 10.07 0 0 1 12 20c-7 0-11-8-11-8a18.45 18.45 0 0 1 5.06-5.94M9.9 4.24A9.12 9.12 0 0 1 12 4c7 0 11 8 11 8a18.5 18.5 0 0 1-2.16 3.19m-6.72-1.07a3 3 0 1 1-4.24-4.24"></path>
              <line x1="1" y1="1" x2="23" y2="23"></line>
            </svg>
          </button>
        </div>
        <div class="password-strength" id="password-strength">
          <div class="strength-bar"><span></span></div>
          <span class="strength-text"></span>
        </div>
      </div>
      <div class="form-group">
        <label for="signup-confirm">{t('auth.confirmPassword')}</label>
        <div class="input-wrapper">
          <svg class="input-icon" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"></path>
          </svg>
          <input type="password" id="signup-confirm" name="confirmPassword" required placeholder={lang === 'zh' ? '再次输入密码' : 'Confirm password'} />
        </div>
      </div>
      <button type="submit" class="auth-submit" id="signup-btn">
        <span class="btn-text">{t('auth.signup')}</span>
        <span class="btn-loading hidden">
          <svg class="spinner" width="20" height="20" viewBox="0 0 24 24">
            <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="3" fill="none" stroke-dasharray="31.4 31.4" stroke-linecap="round"/>
          </svg>
        </span>
      </button>
      <p class="auth-switch">{t('auth.hasAccount')} <span class="auth-link" data-tab="login">{t('auth.login')}</span></p>
    </form>
    
    <div class="auth-divider">
      <span>{lang === 'zh' ? '或' : 'or'}</span>
    </div>
    
    <div class="social-login">
      <button class="social-btn google" type="button">
        <svg width="18" height="18" viewBox="0 0 24 24">
          <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
          <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
          <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
          <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
        </svg>
        <span>Google</span>
      </button>
      <button class="social-btn github" type="button">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        <span>GitHub</span>
      </button>
    </div>
  </div>
</div>

<style>
  .auth-modal {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: var(--z-modal);
    align-items: center;
    justify-content: center;
  }
  
  .auth-modal.open {
    display: flex;
  }
  
  .auth-backdrop {
    position: absolute;
    inset: 0;
    background: rgba(0, 0, 0, 0.6);
    backdrop-filter: blur(8px);
  }
  
  .auth-container {
    position: relative;
    width: 100%;
    max-width: 420px;
    max-height: 90vh;
    overflow-y: auto;
    margin: var(--space-4);
    background: var(--card-bg);
    border: 1px solid var(--card-border);
    border-radius: var(--radius-2xl);
    padding: var(--space-6);
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    animation: modalIn 0.3s ease-out;
  }
  
  @keyframes modalIn {
    from {
      opacity: 0;
      transform: scale(0.95) translateY(-20px);
    }
    to {
      opacity: 1;
      transform: scale(1) translateY(0);
    }
  }
  
  .auth-close {
    position: absolute;
    top: var(--space-4);
    right: var(--space-4);
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    color: var(--text-tertiary);
    border-radius: var(--radius-full);
    transition: all var(--duration-fast) var(--ease-default);
  }
  
  .auth-close:hover {
    color: var(--text-primary);
    background: var(--bg-tertiary);
  }
  
  .auth-header {
    text-align: center;
    margin-bottom: var(--space-6);
  }
  
  .auth-logo {
    display: flex;
    justify-content: center;
    margin-bottom: var(--space-4);
  }
  
  .auth-logo video {
    width: 64px;
    height: 64px;
    border-radius: var(--radius-xl);
    object-fit: cover;
    object-position: center;
    transform: scale(1.15);
  }
  
  .auth-title {
    font-size: var(--text-xl);
    font-weight: var(--font-bold);
    color: var(--text-primary);
    margin-bottom: var(--space-1);
  }
  
  .auth-subtitle {
    font-size: var(--text-sm);
    color: var(--text-tertiary);
  }
  
  .auth-tabs {
    display: flex;
    gap: var(--space-1);
    margin-bottom: var(--space-6);
    background: var(--bg-tertiary);
    padding: var(--space-1);
    border-radius: var(--radius-xl);
  }
  
  .auth-tab {
    flex: 1;
    padding: var(--space-3) var(--space-4);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--text-secondary);
    border-radius: var(--radius-lg);
    transition: all var(--duration-fast) var(--ease-default);
  }
  
  .auth-tab.active {
    color: var(--text-primary);
    background: var(--card-bg);
    box-shadow: var(--shadow-sm);
  }
  
  .auth-tab:hover:not(.active) {
    color: var(--text-primary);
  }
  
  .auth-form {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }
  
  .auth-form.hidden {
    display: none;
  }
  
  .form-group {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
  }
  
  .form-group label {
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--text-secondary);
  }
  
  .input-wrapper {
    position: relative;
    display: flex;
    align-items: center;
  }
  
  .input-icon {
    position: absolute;
    left: var(--space-3);
    color: var(--text-tertiary);
    pointer-events: none;
  }
  
  .form-group input {
    width: 100%;
    padding: var(--space-3) var(--space-4);
    padding-left: calc(var(--space-3) + 26px);
    background: var(--bg-tertiary);
    border: 1px solid var(--border-default);
    border-radius: var(--radius-lg);
    color: var(--text-primary);
    font-size: var(--text-sm);
    transition: all var(--duration-fast) var(--ease-default);
  }
  
  .form-group input:focus {
    outline: none;
    border-color: var(--color-accent-blue);
    box-shadow: 0 0 0 3px rgba(0, 212, 255, 0.15);
    background: var(--bg-primary);
  }
  
  .form-group input::placeholder {
    color: var(--text-tertiary);
  }
  
  .toggle-password {
    position: absolute;
    right: var(--space-3);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-tertiary);
    transition: color var(--duration-fast) var(--ease-default);
  }
  
  .toggle-password:hover {
    color: var(--text-secondary);
  }
  
  .toggle-password .hidden {
    display: none;
  }
  
  .form-options {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .remember-me {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    font-size: var(--text-sm);
    color: var(--text-secondary);
    cursor: pointer;
  }
  
  .remember-me input {
    width: 16px;
    height: 16px;
    accent-color: var(--color-accent-blue);
  }
  
  .password-strength {
    display: flex;
    align-items: center;
    gap: var(--space-2);
    margin-top: var(--space-1);
  }
  
  .strength-bar {
    flex: 1;
    height: 4px;
    background: var(--bg-tertiary);
    border-radius: var(--radius-full);
    overflow: hidden;
  }
  
  .strength-bar span {
    display: block;
    height: 100%;
    width: 0;
    border-radius: var(--radius-full);
    transition: all var(--duration-fast) var(--ease-default);
  }
  
  .strength-bar.weak span {
    width: 33%;
    background: #ef4444;
  }
  
  .strength-bar.medium span {
    width: 66%;
    background: #f59e0b;
  }
  
  .strength-bar.strong span {
    width: 100%;
    background: #22c55e;
  }
  
  .strength-text {
    font-size: var(--text-xs);
    color: var(--text-tertiary);
  }
  
  .auth-submit {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-4);
    margin-top: var(--space-2);
    background: linear-gradient(135deg, var(--color-accent-blue), var(--color-accent-purple));
    color: white;
    font-size: var(--text-sm);
    font-weight: var(--font-semibold);
    border-radius: var(--radius-lg);
    transition: all var(--duration-fast) var(--ease-default);
  }
  
  .auth-submit:hover:not(:disabled) {
    transform: translateY(-1px);
    box-shadow: 0 4px 15px rgba(0, 212, 255, 0.4);
  }
  
  .auth-submit:active:not(:disabled) {
    transform: translateY(0);
  }
  
  .auth-submit:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }
  
  .auth-submit .hidden {
    display: none;
  }
  
  .spinner {
    animation: spin 1s linear infinite;
  }
  
  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }
  
  .auth-switch {
    text-align: center;
    font-size: var(--text-sm);
    color: var(--text-tertiary);
  }
  
  .auth-link {
    color: var(--color-accent-blue);
    cursor: pointer;
    font-weight: var(--font-medium);
    transition: color var(--duration-fast) var(--ease-default);
  }
  
  .auth-link:hover {
    color: var(--color-accent-purple);
  }
  
  .auth-divider {
    display: flex;
    align-items: center;
    margin: var(--space-6) 0;
  }
  
  .auth-divider::before,
  .auth-divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: var(--border-primary);
  }
  
  .auth-divider span {
    padding: 0 var(--space-4);
    font-size: var(--text-sm);
    color: var(--text-tertiary);
  }
  
  .social-login {
    display: flex;
    gap: var(--space-3);
  }
  
  .social-btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-2);
    padding: var(--space-3);
    background: var(--bg-secondary);
    border: 1px solid var(--border-primary);
    border-radius: var(--radius-lg);
    font-size: var(--text-sm);
    font-weight: var(--font-medium);
    color: var(--text-primary);
    transition: all var(--duration-fast) var(--ease-default);
  }
  
  .social-btn:hover {
    background: var(--bg-tertiary);
    border-color: var(--border-hover);
  }
</style>

<script>
  const API_BASE = 'https://api.ustc.dev';
  
  const modal = document.getElementById('auth-modal');
  const backdrop = document.getElementById('auth-backdrop');
  const closeBtn = document.getElementById('auth-close');
  const loginForm = document.getElementById('login-form');
  const signupForm = document.getElementById('signup-form');
  const tabs = document.querySelectorAll('.auth-tab');
  const links = document.querySelectorAll('.auth-link');
  
  function openModal(tab: string = 'login') {
    modal?.classList.add('open');
    switchTab(tab);
    document.body.style.overflow = 'hidden';
  }
  
  function closeModal() {
    modal?.classList.remove('open');
    document.body.style.overflow = '';
  }
  
  function switchTab(tab: string) {
    tabs.forEach(t => t.classList.toggle('active', t.getAttribute('data-tab') === tab));
    loginForm?.classList.toggle('hidden', tab !== 'login');
    signupForm?.classList.toggle('hidden', tab !== 'signup');
    
    const header = document.querySelector('.auth-header');
    const title = header?.querySelector('.auth-title');
    const subtitle = header?.querySelector('.auth-subtitle');
    
    if (tab === 'login') {
      if (title) title.textContent = document.documentElement.lang === 'zh' ? '欢迎回来' : 'Welcome Back';
      if (subtitle) subtitle.textContent = document.documentElement.lang === 'zh' ? '登录您的账户继续' : 'Sign in to your account to continue';
    } else {
      if (title) title.textContent = document.documentElement.lang === 'zh' ? '创建账户' : 'Create Account';
      if (subtitle) subtitle.textContent = document.documentElement.lang === 'zh' ? '注册一个新账户' : 'Sign up for a new account';
    }
  }
  
  function togglePassword(inputId: string, btnId: string) {
    const input = document.getElementById(inputId) as HTMLInputElement;
    const btn = document.getElementById(btnId);
    const eyeOpen = btn?.querySelector('.eye-open');
    const eyeClosed = btn?.querySelector('.eye-closed');
    
    if (input && btn) {
      if (input.type === 'password') {
        input.type = 'text';
        eyeOpen?.classList.add('hidden');
        eyeClosed?.classList.remove('hidden');
      } else {
        input.type = 'password';
        eyeOpen?.classList.remove('hidden');
        eyeClosed?.classList.add('hidden');
      }
    }
  }
  
  function checkPasswordStrength(password: string) {
    const bar = document.querySelector('#password-strength .strength-bar');
    const text = document.querySelector('#password-strength .strength-text');
    
    if (!bar || !text) return;
    
    let strength = 0;
    if (password.length >= 6) strength++;
    if (password.length >= 10) strength++;
    if (/[A-Z]/.test(password)) strength++;
    if (/[0-9]/.test(password)) strength++;
    if (/[^A-Za-z0-9]/.test(password)) strength++;
    
    bar.classList.remove('weak', 'medium', 'strong');
    
    if (password.length === 0) {
      text.textContent = '';
      return;
    }
    
    if (strength <= 2) {
      bar.classList.add('weak');
      text.textContent = document.documentElement.lang === 'zh' ? '弱' : 'Weak';
    } else if (strength <= 4) {
      bar.classList.add('medium');
      text.textContent = document.documentElement.lang === 'zh' ? '中等' : 'Medium';
    } else {
      bar.classList.add('strong');
      text.textContent = document.documentElement.lang === 'zh' ? '强' : 'Strong';
    }
  }
  
  function setLoading(btnId: string, loading: boolean) {
    const btn = document.getElementById(btnId);
    const btnText = btn?.querySelector('.btn-text');
    const btnLoading = btn?.querySelector('.btn-loading');
    
    if (btn) {
      (btn as HTMLButtonElement).disabled = loading;
      btnText?.classList.toggle('hidden', loading);
      btnLoading?.classList.toggle('hidden', !loading);
    }
  }
  
  tabs.forEach(tab => {
    tab.addEventListener('click', () => switchTab(tab.getAttribute('data-tab') || 'login'));
  });
  
  links.forEach(link => {
    link.addEventListener('click', () => switchTab(link.getAttribute('data-tab') || 'login'));
  });
  
  closeBtn?.addEventListener('click', closeModal);
  backdrop?.addEventListener('click', closeModal);
  
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') closeModal();
  });
  
  document.getElementById('toggle-login-pwd')?.addEventListener('click', () => {
    togglePassword('login-password', 'toggle-login-pwd');
  });
  
  document.getElementById('toggle-signup-pwd')?.addEventListener('click', () => {
    togglePassword('signup-password', 'toggle-signup-pwd');
  });
  
  document.getElementById('signup-password')?.addEventListener('input', (e) => {
    checkPasswordStrength((e.target as HTMLInputElement).value);
  });
  
  loginForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    setLoading('login-btn', true);
    
    const formData = new FormData(loginForm as HTMLFormElement);
    const username = formData.get('username') as string;
    const password = formData.get('password') as string;
    
    try {
      const response = await fetch(`${API_BASE}/api/login`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ username, password })
      });
      
      const result = await response.json();
      
      if (result.success) {
        localStorage.setItem('auth_token', result.token);
        localStorage.setItem('user', JSON.stringify(result.user));
        closeModal();
        window.dispatchEvent(new CustomEvent('auth:login', { detail: result.user }));
      } else {
        alert(result.message || 'Login failed');
      }
    } catch (error) {
      console.error('Login error:', error);
      alert('Login failed. Please try again.');
    } finally {
      setLoading('login-btn', false);
    }
  });
  
  signupForm?.addEventListener('submit', async (e) => {
    e.preventDefault();
    setLoading('signup-btn', true);
    
    const formData = new FormData(signupForm as HTMLFormElement);
    const username = formData.get('username') as string;
    const email = formData.get('email') as string;
    const password = formData.get('password') as string;
    const confirmPassword = formData.get('confirmPassword') as string;
    
    if (password !== confirmPassword) {
      alert(document.documentElement.lang === 'zh' ? '两次输入的密码不一致' : 'Passwords do not match');
      setLoading('signup-btn', false);
      return;
    }
    
    try {
      const response = await fetch(`${API_BASE}/api/signup`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ username, email, password })
      });
      
      const result = await response.json();
      
      if (result.success) {
        localStorage.setItem('auth_token', result.token);
        localStorage.setItem('user', JSON.stringify(result.user));
        closeModal();
        window.dispatchEvent(new CustomEvent('auth:login', { detail: result.user }));
      } else {
        alert(result.message || 'Registration failed');
      }
    } catch (error) {
      console.error('Signup error:', error);
      alert('Registration failed. Please try again.');
    } finally {
      setLoading('signup-btn', false);
    }
  });
  
  (window as any).openAuthModal = openModal;
</script>
