---
interface Props {
  logo?: string;
}

const { logo = "/logo.mp4" } = Astro.props;
---

<nav>
  <div class="nav-container">
    <div class="nav-glass-container">
      <div class="logo">
        <video class="logo-video" autoplay loop muted playsinline preload="auto" poster="/favicon-32x32.png">
          <source src={logo} type="video/mp4">
        </video>
        <span>Meow Note</span>
      </div>
      
      <ul class="nav-links">
        <li><a href="/" class="active">Home</a></li>
        <li><a href="/research">Research</a></li>
        <li><a href="/chatbot">ChatBot</a></li>
        <li><a href="/kit">Kit</a></li>
        <li><a href="/about">About</a></li>
      </ul>
      
      <div class="nav-actions">
        <button class="theme-toggle" onclick="alert('Theme switching coming soon')">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="5"></circle>
            <line x1="12" y1="1" x2="12" y2="3"></line>
            <line x1="12" y1="21" x2="12" y2="23"></line>
            <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
            <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
            <line x1="1" y1="12" x2="3" y2="12"></line>
            <line x1="21" y1="12" x2="23" y2="12"></line>
            <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
            <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
          </svg>
        </button>
        
        <div class="lang-switcher">
          <button class="lang-btn" onclick="document.getElementById('lang-dropdown').classList.toggle('show')">
            <span id="current-lang">EN</span>
          </button>
          <div class="lang-dropdown" id="lang-dropdown">
            <div class="lang-option active" onclick="alert('Language switching coming soon')">English</div>
            <div class="lang-option" onclick="alert('Language switching coming soon')">中文</div>
          </div>
        </div>
        
        <div id="auth-buttons" style="display: flex; gap: 1rem;">
          <button class="nav-login" onclick="event.preventDefault(); alert('Login functionality coming soon')">Log In</button>
          <button class="nav-cta" onclick="event.preventDefault(); alert('Signup functionality coming soon')">Get Started</button>
        </div>
        
        <button class="mobile-menu-btn" onclick="document.getElementById('mobile-nav').classList.toggle('show')">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="3" y1="12" x2="21" y2="12"></line>
            <line x1="3" y1="6" x2="21" y2="6"></line>
            <line x1="3" y1="18" x2="21" y2="18"></line>
          </svg>
        </button>
      </div>
    </div>
  </div>
  
  <div class="mobile-nav" id="mobile-nav">
    <a href="/">Home</a>
    <a href="/research">Research</a>
    <a href="/chatbot">ChatBot</a>
    <a href="/kit">Kit</a>
    <a href="/about">About</a>
    <a href="#" onclick="event.preventDefault(); alert('Login functionality coming soon')">Log In</a>
  </div>
</nav>

<style>
  nav {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 1000;
    padding: 1rem 2rem;
  }
  
  .nav-container {
    max-width: 1400px;
    margin: 0 auto;
  }
  
  .nav-glass-container {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.75rem 1.5rem;
    background: rgba(10, 10, 11, 0.4);
    backdrop-filter: blur(60px) saturate(200%);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 100px;
  }
  
  .logo {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, #fff 0%, #2997ff 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  
  .logo-video {
    width: 40px;
    height: 40px;
    border-radius: 10px;
    object-fit: cover;
  }
  
  .nav-links {
    display: flex;
    gap: 2rem;
    list-style: none;
  }
  
  .nav-links a {
    color: var(--text-secondary);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
  }
  
  .nav-links a:hover,
  .nav-links a.active {
    color: var(--text-primary);
  }
  
  .nav-actions {
    display: flex;
    align-items: center;
    gap: 1rem;
  }
  
  .theme-toggle {
    background: none;
    border: none;
    color: var(--text-primary);
    cursor: pointer;
    padding: 0.5rem;
    border-radius: 50%;
    transition: background 0.3s ease;
  }
  
  .theme-toggle:hover {
    background: rgba(255, 255, 255, 0.1);
  }
  
  .lang-switcher {
    position: relative;
  }
  
  .lang-btn {
    background: none;
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--text-primary);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .lang-btn:hover {
    background: rgba(255, 255, 255, 0.1);
  }
  
  .lang-dropdown {
    position: absolute;
    top: 100%;
    right: 0;
    margin-top: 0.5rem;
    background: rgba(10, 10, 11, 0.9);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    padding: 0.5rem;
    min-width: 120px;
    display: none;
  }
  
  .lang-dropdown.show {
    display: block;
  }
  
  .lang-option {
    padding: 0.5rem 1rem;
    border-radius: 6px;
    cursor: pointer;
    transition: background 0.3s ease;
  }
  
  .lang-option:hover,
  .lang-option.active {
    background: rgba(255, 255, 255, 0.1);
  }
  
  .nav-login {
    background: none;
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: var(--text-primary);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    cursor: pointer;
    transition: all 0.3s ease;
  }
  
  .nav-login:hover {
    background: rgba(255, 255, 255, 0.1);
  }
  
  .nav-cta {
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-purple) 100%);
    border: none;
    color: white;
    padding: 0.5rem 1.5rem;
    border-radius: 20px;
    cursor: pointer;
    transition: transform 0.3s ease;
  }
  
  .nav-cta:hover {
    transform: scale(1.05);
  }
  
  .user-menu {
    position: relative;
  }
  
  .user-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-purple) 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 600;
    cursor: pointer;
  }
  
  .user-dropdown {
    position: absolute;
    top: 100%;
    right: 0;
    margin-top: 0.5rem;
    background: rgba(10, 10, 11, 0.9);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    padding: 1rem;
    min-width: 200px;
    display: none;
  }
  
  .user-dropdown.show {
    display: block;
  }
  
  .user-info {
    margin-bottom: 1rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  #user-name-display {
    font-weight: 600;
    color: var(--text-primary);
  }
  
  .user-email {
    font-size: 0.8rem;
    color: var(--text-secondary);
    margin-top: 0.25rem;
  }
  
  .user-dropdown-item {
    display: block;
    padding: 0.5rem 1rem;
    color: var(--text-primary);
    text-decoration: none;
    border-radius: 6px;
    transition: background 0.3s ease;
  }
  
  .user-dropdown-item:hover {
    background: rgba(255, 255, 255, 0.1);
  }
  
  .mobile-menu-btn {
    background: none;
    border: none;
    color: var(--text-primary);
    cursor: pointer;
    padding: 0.5rem;
    display: none;
  }
  
  .mobile-nav {
    position: absolute;
    top: 100%;
    left: 0;
    right: 0;
    background: rgba(10, 10, 11, 0.9);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    padding: 1rem;
    margin-top: 0.5rem;
    display: none;
    flex-direction: column;
    gap: 1rem;
  }
  
  .mobile-nav.show {
    display: flex;
  }
  
  .mobile-nav a {
    color: var(--text-primary);
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    transition: background 0.3s ease;
  }
  
  .mobile-nav a:hover {
    background: rgba(255, 255, 255, 0.1);
  }
  
  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }
    
    .mobile-menu-btn {
      display: block;
    }
    
    #auth-buttons {
      display: none;
    }
  }
</style>
